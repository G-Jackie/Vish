# Ignore bundler config
/.bundle

# Ignore the default SQLite database.
/db/*.sqlite3

# Ignore config files with sensible information.
config/database.yml
config/deploy.rb
config/initializers/exception_notification.rb
config/development.sphinx.conf

# Ignore all logfiles and tempfiles.
/log/*.log
/tmp

# ignore folder from editors
.idea

# editor backup files
**~

# ignore documents folder
documents

# avatar temporal files
public/images/tmp
public/system/tmp
