@charset "UTF-8";

*{
  padding: 0px;
  margin: 0px;
}

body{
  background-color:#F9F9F9;
  width: 990px;
  margin-left: auto;
  margin-top: 0px;
  margin-right: auto;
}


/*******HEADER ********/

#logo{
  display:inline-block;
  height: 56px;
  width: 450px;
  background: url(<%= asset_path("vish_logo.png") %>) no-repeat;
  margin-left: 36px;
  margin-top: 36px;
}

#right{
  float: right;
  margin-top: 66px;
  margin-right: 36px;
}

#searcher {
	height: 35px;
	width: 50px;
  display:inline;
}

/*************** principal *****************/
#section {
	height: 768px;
        width: 1024px;
}
.container{
	color: #CCCCCC;
}

#login {
	margin-left: 500px;
}
#principal{
  margin-top: 49px;
	width: 960px;
	height: 600px;

}

#principal #login_3 {
	text-align: center;
	height: 1204px;

}

.big_mens{
  display:inline-block;
  width: 381px;
	font-family: "Helvetica, sans serif, arial";
	font-size: 50px;
  color-size: r158 g158 b158;
  text-align: right;
}

.mens {
  float: right;
  width: 550px;
  font-family: "Helvetica, sans serif, arial";
	font-size: 18px;
  color-size: r120 g120 b120;
  margin-top: 40px;
}

#title {
  margin-left: 460px;
}

.caja{
    width: 96px;
    border-radius: 5px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
  border: 0px solid #fff;
}

#forms {
  width: 640px;
	font-size: 11px;
	font-family: "Helvetica, sans serif, arial";
}

.button_login{
	font-family: Arial, Helvetica, sans-serif;
	font-size: 14px;
	color: #ffffff;
	padding: 4px 9px;
	background: -moz-linear-gradient(
		top,
		#d91a67 0%,
		#d91f5d);
	border-radius: 1px;
	-moz-border-radius: 19px;
	-webkit-border-radius: 19px;
}

.button_login:hover{
	background: -moz-linear-gradient(
		top,
		#000 0%,
		#000);
  	cursor: pointer;
}


.login_1 {
  width: 150px;
	margin-left: 570px;
	font-size: 11px;
	font-family: "Helvetica, sans serif, arial";
}
.login_2 {
  width: 50px;
	margin-left: 656px;
	font-size: 11px;
	font-family: "Helvetica, sans serif, arial";
}



/*****footer***********/

#footer{
  width: 730px;
	height: 20px;
	clear: both;
	margin-top: 10px;
	color: #333333;
  margin-left: 117px;
}
#footer ul{
  display: block;
}
#footer li{
	display: inline-block;
	margin-right: 68px;
	font-family: "Helvetica, sans serif, arial";
	font-size: 12px;

}
#footer a{
	text-decoration: none;
  color: #333333;
}
#footer a:hover{
	color: #CCCCCC;
}

