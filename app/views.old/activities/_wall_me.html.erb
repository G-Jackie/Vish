<div id="wall-me" class="row-fluid modal-pivot tab-pane<%= " active" if is_active_wall %>">
  <% if activities.size == 0 %>
    <%= render :partial => "activities/zero_screen" %>
  <% else %>
    <%= render activities  %>
    <%#= paginate activities, :remote => true, :param_name => :page_me, :window => 2, :params => {:active_tab => 'me'}  %>
    <% params[:page_me]="1" if params[:page_me].blank? %>
    <div class = "gray_links">
      <%= link_to(t('activity.more'), {:page_me => (params[:page_me].to_i + 1), :active_tab => 'me'}, :id => 'me_load_more_button', :class => 'btn-more', :remote => true) unless activities.last_page? %>
    </div>
  <% end %>
</div>

<%= javascript_tag do %>
  $(function(){  
    SocialStream.Timeline.init();
  });
<% end %>


