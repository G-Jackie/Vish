<% if @embed.valid? %>
  //Display the new post
  $("#wall").prepend("<%= escape_javascript(render @embed.post_activity) %>");
  $("#wall-me").prepend("<%= escape_javascript(render @embed.post_activity) %>");

  SocialStream.Timeline.create("<%= escape_javascript dom_id(@embed.post_activity) %>");
<% else %>
  SocialStream.Timeline.create();
  alert('<%= j @embed.errors.full_messages.to_sentence %>');
<% end %>

$("#embed_preview").hide();
$("#embed_preview").html("");          
$("#embed_fulltext").val("");
