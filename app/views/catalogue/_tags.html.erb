<script type="text/javascript">
  <%if @category%>
    var category_shown = "<%=@category%>";
  <%else%>
    var category_shown = null;
  <%end%>

  $(document).ready(function(){
    $(".catalogue_category_link").click(function(event){
      event.preventDefault();

      var categoryId = $(this).attr("categoryId");
      <%if is_home%>
        window.location = "/catalogue/" + categoryId + "?back_home=true";      
      <%else%>
        window.location = "/catalogue/" + categoryId;      
      <%end%>
    });
  });
</script>


<section id="catalogue">
  <ul class="Tags_list_as ">
    <div class="info_catalogue_bottom"></div>
    <div id="effect" class="newClass ui-corner-all">
      <% Vish::Application.config.catalogue_categories.each do |categoryId| %>
        <li class="catalogue_category_link" categoryId="<%=categoryId%>" href="#">
          <label><%=t('catalogue.categories.' + categoryId)%></label>
        </li>
      <% end %>
    </div>
  </ul>
</section>
<button class="btn btn-default" href="#" id="showMore_tags" status="showMore" class="ui-state-default ui-corner-all"><%=t('excursion.actions.show_more')%></button>

<script>
  $(function(){
    $("#showMore_tags").click(function(){
      $(".newClass").switchClass( "newClass", "anotherNewClass", 1000 );
      $(".anotherNewClass").switchClass( "anotherNewClass", "newClass", 1000 );
      if($("#showMore_tags").attr("status")=== "showMore"){
        $("#showMore_tags").html('<%=t("excursion.actions.show_fewer")%>');
        $("#showMore_tags").attr("status", "showFewer");
      }
      else{
        $("#showMore_tags").html('<%=t("excursion.actions.show_more")%>');
        $("#showMore_tags").attr("status", "showMore");
      }
      return false;
    });
  });
</script>
