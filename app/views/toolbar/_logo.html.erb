<div id="logo_index">



  <% if subject == current_subject %>
    <div class="center">
      <div class="logo_grid logo_full">          
        <%= link_to image_tag(subject.logo.url(:profile), :alt => subject.name , :size => "119x119", :id => "current_avatar_img"), subject %>    
        <div class="logo_menu logo_caption link_pink">
          <%= link_to t('avatar.profile_change'), avatars_path  %>
        </div>
      </div>        
    </div>
    <div class=" row space_center"></div>
    <div class="title_bold dark-gray size22 dsignesbold" ><%= subject.name %></div>
    <div class="row space_center"></div>

  <% else %>
    <%= link_to image_tag(subject.logo.url, :alt => subject.name , :size => "119x119"), subject %>
    <div class=" row space_center"></div>
    <div class="center"><span class="title_bold dark-gray size22 dsignesbold" ><%= subject.name %></span></div>
    <div class="follow-btn-profile"><%=contact_to(subject) %></div>
  <% end %>
</div>

