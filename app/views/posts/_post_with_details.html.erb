<% author = post.author_subject %>
<div class="row-fluid">
  <div class="span2 pagination-centered link_white">
    <a data-toggle="modal" href="#user-modal-<%= author.slug %>" class="user-modal-button-<%= author.slug %>" alt='<%= author.name %>'><%= image_tag(author.logo.url(:contact)) %></a>
  </div>
  <div class=" link_white">
    <h4><%= link_to truncate_name(author.name, :length => 40), author %></h4>
    <h5 class="blue-white"><span class="size13"><%=t "#{post.class.name.underscore}.name"  %></span></h5>
    <%= link_to post do%>
      <% text = excerpt(strip_tags(post.text),get_search_query_words.first,:radius => 25) || "" %>
      <% if text.length < 60 %>
        <% text = excerpt(strip_tags(post.text),get_search_query_words.first,:radius => 30 + (60 - text.length)) || "" %>
      <% end %>
      <%= highlight(text,get_search_query_words) %>
    <% end %>
  </div>
</div>

<%= javascript_tag do %>
  $(".user-modal-button-<%= author.slug %>").on("click", function(){
    <%= modal_for(author.subject) %>
  });
<% end %>
