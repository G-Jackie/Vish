<div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span><span class="sr-only"><%=t("close")%></span>
        </button>
        <%= render partial: 'help/help_request_group_perm' %>
        <h4 id=""><%= t('admin.request_modal.title')%></h4>
</div>

<div class="modal-body" style="overflow:hidden;">
  	<p><%= t('admin.request_modal.description')%>:</p>
  	<p> <%=@request.description%></p>
  	<p> <%=t('admin.request_modal.attachment')%>: </p>
	<% if @request.attachment.exists? %>	  
	  <p><a href="<%=@request.attachment.url%>" target="_blank"><%= @request.attachment_file_name %></a></p>
	<%else%>
	  <p><%=t('admin.request_modal.attachment_not')%></p>
	<% end %>
</div><!-- CIERRA BODY-->

<div class="modal-footer">
	<button type="button" class="btn btn-primary" data-dismiss="modal"><%=t("close")%></button>
</div>
