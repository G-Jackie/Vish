<%= form_for Contribution.new, :html => { :multipart => true }, :remote => false do |f| %>
  <% if !wa_assignment.nil?%>
    <%= f.hidden_field :wa_assignment_id, :value => wa_assignment.id %>
  <% elsif !parent.nil? %>
    <%= f.hidden_field :parent_id, :value => parent.id %>
  <% end %>
  <%= f.hidden_field :type, :value => "Document" %>
  <input class="contribution_file_input" name="document[file]" type="file">
  <%= f.submit t('button.upload'), :id=>"" ,:class => "contribution", :disabled => editMode %>
<% end %>

<button class="btn btn-primary btn_show_upload"><%= t('resource.one')%></button>
<button class="btn btn_hidden_upload"><i class="icon-chevron-left"></i></button>
<script>
	$( ".btn_show_upload" ).click(function() {
  	$( "#new_contribution" ).show( "slow" );
  	$( ".btn_show_upload" ).hide( "slow" );
    $( ".btn_hidden_upload" ).show( "slow" );
	});

  $( ".btn_hidden_upload" ).click(function() {
    $( "#new_contribution" ).hide( "slow" );
    $( ".btn_hidden_upload" ).hide( "slow" );
    $( ".btn_show_upload" ).show( "slow" );
  });
</script>