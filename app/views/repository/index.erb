<%= div_for repository, :class => '' do %>
    <ul class="thumbnails span3">
      <li class="span1">
        <%= link_to  thumb_for(repository, 60), repository, :class => "container" %>
      </li>
      <li class="span 2">
        <div class="caption elipsis">
          <h4><%= link_to truncate_name(rosource.title, :length => 20), resource %></h4>
          <h5><%=t('follow.followers')%>: <span class="dark-gray"><%=num_views%></span> views</h5>
        </div>
      </li>
    </ul>
<% end %>