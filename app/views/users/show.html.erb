<div class="user">
  <header id="profile-info">

    <!--avatar-->
    <section class="avatar">
      <%= link_to(image_tag(profile_subject.logo.url, :alt => profile_subject.name, :class => "avatar_img"), profile_subject, :class => "avatar_img") %>
      <%if @user.is_mve %>
        <div class="badge-teacher-active"></div>
      <%end%>
    </section>

    <!--box personal info-->
    <section class="information">
      <div class="briefing">
        <!--__help-->         
        <%= render :partial => 'help/help_profile' %>
        <!--__Tags -->
        <div class="tags-profile">
          <ul class="tagList">
            <%= @user.profile.subject.tag_list%>
          </ul>
        </div>
        <!--__name-->
        <div class="name">
          <h2><%= @user.name %></h2>
        </div>
        <!--__description-->
        <div class="description">
          <% if @user.profile.description? %>
            <%= @user.profile.description%>
          <% else %>
            <%= "#{ @user.name } #{ t('profile.is_on') } #{  t('site.name') }" %>
          <% end %>
        </div>

        <div class="panel-group" id="accordion">
          <div class="panel">
            <header class="ocupation">
              <% if profile_subject_is_current? && profile_subject.occupation_sym == :select %>          
                    <h4 class="select">
                      <%= link_to t('profile.occupation.select'), '#', :id => "select_occupation_link" %> 
                    </h4>
                    <% elsif profile_subject.occupation_sym != :select %>
                    <h4>
                      <%= t('profile.occupation.label') %>
                    </h4>
                    <span>
                      <%= profile_subject.occupation_t %>
                    </span>
                  <% end %>
            </header>
            <div id="collapseInfo" class="panel-collapse collapse">
              <div class="panel-body">
                <div class="ocupation">
              <% if profile_subject_is_current? && profile_subject.occupation_sym == :select %>          
                    <h4 class="select">
                      <%= link_to t('profile.occupation.select'), '#', :id => "select_occupation_link" %> 
                    </h4>
                    <% elsif profile_subject.occupation_sym != :select %>
                    <h4>
                      <%= t('profile.occupation.label') %>
                    </h4>
                    <span>
                      <%= profile_subject.occupation_t %>
                    </span>
                  <% end %>
                </div>

                <div class="organization">
                    <h4><%= t('profile.organization') %></h4>
                    <span><%= @user.profile.organization %></span>
                  </div>

                  <!--__Website -->
                  <div class="website">
                    <h4><%= t('profile.website') %></h4>
                    <span><%= link_to @user.profile.website,  @user.profile.website, :target=>'_blank' %></span>
                  </div>

                  <!--__birthday -->
                  <div class="birthday">
                    <h4><%= t('profile.' + current_subject.class.to_s.downcase + '.birthday') %></h4>
                    <span><%= @user.profile.birthday %></span>
                  </div>

                  <!--__city -->
                  <div class="city">
                    <h4><%= t('profile.city') %></h4>
                    <span><%= @user.profile.city %></span>
                  </div>

                  <!--__Country -->
                  <div class="county">
                    <h4><%= t('profile.country') %></h4>
                    <span><%= @user.profile.country %></span>
                  </div>
              </div>
            </div>
          </div> 
        </div>

        
        <!--__toobar-profile -->
        <div class="toolbar-profile">
          <%= render :partial => 'users/toolbar_user' %>
        </div>

      </div>

      <%= render :partial => 'users/form_update_profile' %>
    </section>
  </header>

  <%= render partial: 'users/profile-info' %>

  <%= javascript_tag do %>
    $(function() {
      SocialStream.Profile.show({
      section: "<%= params[:section ] %>"
      });
    });

    $("#select_occupation_link").click(function(){
      $("#edit_icon_link").click();
    });
  <% end %>
</div>







