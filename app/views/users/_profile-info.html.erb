<script>
//important that this is here and not in document ready, so they are defined when document is ready and we can use them
var pageless_state = {
      "excursions":{
        "url": "<%= user_url(profile_or_current_subject) %>",
        "num_pages":0,
        "current_page":0
      },
      "events":{
        "url": "<%= user_url(profile_or_current_subject) %>/events",
        "num_pages":0,
        "current_page":0
      },
      "resources":{
        "url": "<%= user_url(profile_or_current_subject) %>/resources",
        "num_pages":0,
        "current_page":0
      },
      "categories":{
        "url": "<%= user_url(profile_or_current_subject) %>/categories",
        "num_pages":0,
        "current_page":0
      },
      "followers":{
        "url": "<%= user_url(profile_or_current_subject) %>/followers",
        "num_pages":0,
        "current_page":0
      },
      "followings":{
        "url": "<%= user_url(profile_or_current_subject) %>/followings",
        "num_pages":0,
        "current_page":0
      }
    };

function update_pageless_state(tab, num_pages, current_page){
    pageless_state[tab].num_pages = num_pages;
    pageless_state[tab].current_page = current_page;
}

function re_apply_pageless(tab){
    //first remove old pageless
    $.pagelessStop();

    $("#" + tab + " ul").pageless({ 
                    totalPages: pageless_state[tab].num_pages ,
                    url: pageless_state[tab].url,
                    currentPage: pageless_state[tab].current_page,
                    loader: '.loader_pagination',
                    end: function(){
                      $('.loader_pagination').hide();
                    }
    });
  }

</script>

