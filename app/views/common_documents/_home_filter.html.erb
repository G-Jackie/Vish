<div class="row btn-toolbar">
  <div class="span3">
    <% filter_id ||= "document-filter" %>
    <input id="<%= filter_id %>" type="text" class="input-medium inline-block ontop" placeholder="filter"  name="filter">
    <div class="btn-group ">
      <a href="#" data-toggle="dropdown" class="btn dropdown-toggle"><span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><%=link_to(  t('excursion.network'), '/' ) %></li>
        <li><%=link_to(  t('excursion.my'), '/' ) %></li>
        <li><%=link_to(  t('excursion.favorites'), '/' ) %></li>
        <li><%=link_to(  t('excursion.others'), '/' ) %></li>
      </ul>
    </div>
  </div>
  <div class="pull-right">
    <div id="resource-filter-btn" class="btn-group">
        <button class="blue-btn" >
          <%= '+'+t('options.add') %>
        </button>
    </div>
  </div>
</div>
<%= content_for :javascript do %>
  $('#resource-filter-btn').click(function(){
    $('.activity_form_selector').removeClass('selected');
    $('#select_document').addClass('selected');
    $('#wrapper_activities_header form').hide();
    $('#new_document').show();
    $('#wall-input').effect("highlight", {}, 3000);
  });

  if(!Vish.Filter.loaded) Vish.Filter.init();
<% end %>
