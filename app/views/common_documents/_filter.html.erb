<div class="row btn-toolbar">
  <div class="pull-right">
    <% filter_id ||= "document-filter" %>
    <input id="<%= filter_id %>" type="text" class="input-medium inline-block ontop" placeholder="<%= t('filter') %>"  name="filter">
    <div class="btn-group">
      <%if profile_subject_is_current?%>
        <button class="btn" data-toggle="collapse" data-target="#home_wall">
          <%= '+'+t('options.add') %>
        </button>
      <% end %>
    </div>
  </div>
</div>
<%= content_for :javascript do %>
  if(!Vish.Filter.loaded) Vish.Filter.init();
<% end %>
