<div class="attachment_tile" id="<%= dom_id(document) %>">
<% %>
  <div class="attachment_tile_thumb">
    <%= link_to "", document, :class => icon_class_for(document), :alt => document.title, :title => document.title, :rel=> 'tooltip' %>
  </div>

  <div class="attachment_tile_tooltip">
<% ttl = %>
    <%= link_to content_tag(:span, raw("<i class=' iconnav-tools'></i> ")),
                "javascript:;",  :alt => document.title, :rel => 'tooltip', :title=> 
                    if document.is_a? Document 
                        raw("<i class='icontool16-tool16_arrow_3'></i> ") +"<a href='" + download_document_path(document) + "'>" + t('document.actions.download') + "</a>" + 

                    if  document.is_a? Document and document.post_activity.edit_object_by?(current_subject) then 
                    '<br/>' + raw("<i class='icontool16-tool16_edit'></i> ") +"<a href='" + document_path(document, :editing => true) + "'>" + t('document.actions.edit') + "</a>" end+    

                    if document.post_activity.delete_object_by?(current_subject) then
                      '<br/>' + raw("<i class='icontool16-tool16_symbol_delete'></i> ")  + "<a href='"+ document_path(document) + "'data-confirm= 'Delete picture?' data-method='delete' rel='nofollow'>" +  t('document.actions.delete') + "</a>"end 

                      else document.is_a? Link 
                        raw("<i class='icontool16-tool16_arrow_8'></i> ")  +"<a href='" + document.url + "'>" + t('link.go') + "</a>" + if document.post_activity.delete_object_by?(current_subject) then '<br/>' + raw("<i class='icontool16-tool16_symbol_delete'></i> ")  + "<a href='"+ link_path(document) + "'data-confirm= 'Delete picture?' data-method='delete' rel='nofollow'>" +  t('document.actions.delete') + "</a>"end end %>   

    <div class="tipsy_content" style="display:none;">
    </div>
  </div>

<!-- File title -->

  <div class="attachment_tile_text">
    <%= link_to truncate_name(document.title, :length => 15),
                document,
                :alt => document.title,
                :title => document.description,
                :rel => 'tooltip', 
                :path => document %>
  </div>
</div>

<%= javascript_tag do %>
  $(document).ready(function(){

  SocialStream.Repository.init();


  $('.attachment_tile_thumb a').tooltip();
  $('.attachment_tile_text a').tooltip({ placement: 'bottom'}); 

  $('.attachment_tile_tooltip a').tooltip({ placement: 'bottom', delay: { show: 200, hide: 3500 }});

  });
<% end %>
