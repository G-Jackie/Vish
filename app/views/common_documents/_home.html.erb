<%= div_for actor_documents, :class => 'repository' do %>
    <ul class="thumbnails span3">
      <li class="span1">
        <%#= link_to  thumb_for(repository, 60), repository, :class => "container" %>
      </li>
      <li class="span2">
        <div class="caption elipsis">
          <h4 class="link_gray size16"><%#= link_to truncate_name(resource.title, :length => 20), resource %></h4>
          <h5><span class="green"><%=t('follow.followers')%>:</span> <span class="ligth-gray"><%#=num_views%></span> views</h5>
        </div>
      </li>
    </ul>
<% end %>
