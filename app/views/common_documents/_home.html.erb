<%= div_for document, :class => 'span3' do %>
  <%= javascript_tag do %>
    <%= modal_for(document) %>
    <%= modal_for(document.author.subject) %>
  <% end %>

<%= javascript_tag do %>

    var type = '<%= document.class.to_s.downcase %>';
    if(type == 'officedoc'){
      var click = " Vish.Officedoc.redim(); Vish.Officedoc.googdoc(); Vish.Officedoc.rwindow();"
    }else{
      click = "";
    }
<% end %>


  <ul class="thumbnails">
    <li class="span">
      <div id="margin-resources">
        <a data-toggle="modal" href="#<%= document.class.to_s.downcase %>-modal-<%= document.id.to_s%>" onclick="' + click + '" class="<%= icon_class_for(document) %> <%= document.class.to_s.downcase %>-modal-button-<%= document.id.to_s%> modal-trigger"></a>
      </div>
    </li>
    <div class="row-fluid-100">
      <h4 class="link_gray size15 ellipsis percent80">
        <a data-toggle="modal" href="#<%= document.class.to_s.downcase %>-modal-<%= document.id.to_s%>" class="<%= document.class.to_s.downcase %>-modal-button-<%= document.id.to_s%> modal-trigger" onclick="' + click + '"><%= document.title %></a>
      </h4>
      <div class="rw-words rw-words-1">
          <span><h5 class="green inline">by </h5><h5 class="link_gray inline ellipsis w120px"><a data-toggle="modal" href="#user-modal-<%= document.author.slug %>" class="user-modal-button-<%= document.author.slug %> modal-no-trigger"><%= document.author.name %></a></h5></span>
          <div class="clearfloat"></div>
          <span><h5 class="green inline margin-home-resource-view"><%=document.visit_count.to_s%> </h5> <%= t("follow.views") %> / <h5 class="green inline like_count_<%= dom_id(document.post_activity) %>"><%=document.post_activity.likes.count.to_s%></h5> <div class="verb_like" id="like_<%= dom_id(document.post_activity) %>"><%= link_like(document.post_activity)%></div></span>

      </div>
    </div>
  </ul>
<% end %>

