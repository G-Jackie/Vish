<%= div_for document, :class => 'span3' do %>
  <ul class="thumbnails">
    <li class="span">
      <div id="margin-resources">
      <%= link_to  "", document, :class => icon_class_for(document), :alt => document.title %>
      </div>
    </li>
    <div class="row-fluid-100">
      <h4 class="link_gray size15 elipsis-resources"><%= link_to truncate_name(document.title,), document %></h4>
        <div class="rw-words rw-words-1">
          <span><h5 class="green inline">by </h5><h5 class="link_gray inline"><%=link_to( truncate_name(document.author.name, :length => 18), document.author.subject)%></h5></span>
          <div class="clearfloat"></div>
          <span><h5 class="green inline margin-home-resource-view"><%=document.visit_count.to_s%> </h5> <%= link_to image_tag("view.png"), document %> / <h5 class="green inline" id="like_count_<%= dom_id(document.activities.first) %>"><%=document.activities.first.likes.count.to_s%></h5> <div class="verb_like" id="like_<%= dom_id(document.activities.first) %>"><%= link_like(document.activities.first)%></div></span>

        </div>
    </div>
  </ul>
<% end %>
