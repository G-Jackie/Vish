                <%= link_to current_subject do %>
                  <i class="icon-user"></i>
                  <%= t('profile.one') %>
                <% end %>
              </li>

              <li class="settings-menu">
                <%= link_to settings_path do %>
                  <i class="icon-cog"></i>
                  <%= t('dropdown.settings') %>
                <% end %>
              </li>

              <% if availableModels.include? "Excursion" and availableServices.include? "ARS" %>
