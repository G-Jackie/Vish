<!-- HTML5 DOCTYPE -->
<!DOCTYPE html>
<html lang="<%= I18n.locale.to_s %>">
<%= render :partial => 'layouts/head' %>
<body>
<div class="container">
  <header id="headerFront row span12">
    <%= render :partial => "layouts/header" %>
  </header>
  <div class="row">
    <section id="left" class="span3">
      <%= yield :sidebar %>
    </section>
    <section id="main" class="span6 offset3">
      <div class="space_double_center"></div>
      <div id="flash">
        <%= render :partial => "layouts/flash", :locals => {:flash => flash} %>
      </div>
      <section id="content">
        <%= yield %>
      </section>
    </section>
    <section id="right" class="span3 offset9">
      <%= yield :sidebar %>
    </section>
    <div class="space_double_center"></div>
  </div>
  <footer class="row span12">
    <%= render :partial => "layouts/footer" %>
  </footer>
</div>
</body>
</html>