        </ul>
      </li>

<!-- lang-->
      <li class="btn-group dropup">

        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          <% the_locale = current_user ? current_user.language : I18n.locale %>
          <% if (the_locale == "" || the_locale == nil)
                the_locale = "en"
             end
          %>
          <span class="idioma"><%=image_tag("flags/" + the_locale.to_s + ".png", :title=>the_locale.to_s, :class=> "")%><%= t('lang.title') %></span>
          <i class="fa fa-angle-up"></i>
        </button>  
          <ul class="dropdown-menu">
            <% for locale in (I18n.available_locales) -%> 
             <li class="">
                <%= link_to image_tag("flags/" + locale.to_s + ".png", :title=>locale.to_s, :class=> "") + " " + t(:language_name, :locale => locale.to_s), session_locale_path(:new_locale => locale.to_s), :method => :post, :remote => false %>
              </li>
            <% end %>
          </ul>
      </li>
<!-- contact-->
      <li>
         <%=mail_to('virtual.science.hub@gmail.com', t('contact.footer'), :encode => :javascript, :class=> "btn btn-default") %>
      </li>
<!-- social-->
      <li class="social">
          <a href="https://www.facebook.com/VirtualScienceHub" class="btn btn-default" target="_blank"><i alt="Facebook-logo" class="social-img fa fa-facebook"></i>
          </a>
          <a href="https://twitter.com/ViSH_portal" class="btn btn-default" target="_blank"><i alt="Twitter-logo" class="social-img fa fa-twitter"></i>
          </a>
        </li>

<!-- global-->
      <li class="global">
        <%= link_to image_tag("footer/global.png",  :class=> "btn btn-default" ), "http://www.globalexcursion-project.eu", :target=> "_blank"  %>
      </li>
