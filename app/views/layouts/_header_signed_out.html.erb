<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">

      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <!--logo-->
      <div class="brand">
        <%= link_to(image_tag('logo/brand.png', :alt => t('site.name')), '/', :class => "logo"); %>
        <div id="fittext2" class=" vish-name hidden-phone"><%=t("site.current.title")%></div>
      </div>


      <div class="nav-collapse collapse">
        <!-- FIXME: search javascript functionality in 'layouts/search' -->
        <!--search web-->
        <li class="navegation  hidden-phone">
          <%= render partial: 'layouts/uisearch_header' %>
        </li>

        <!--search mobile-->
        <li class="navegation hidden-tablet hidden-desktop visible-phone ">
          <%= render partial: 'layouts/search_mobile' %>
        </li>

        <!--browse-->
        <%= render partial: 'layouts/browse_header' %>
        
        <!--login-->
        <li class="login dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#">
            <%=t("sign_in")%>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
            <%= form_for User.new, :as => :user, :url => user_session_path do |f| %>
            <%= f.email_field :email, :id => "username" %>
            <%= f.password_field :password, :id => "password"  %>
            <%= f.submit t(:sign_in), :class => ' btn btn-primary'%>
            <label class="checkbox">
              <input type="checkbox"> <%=t("activerecord.attributes.user.remember_me")%>
            </label>    
            <% end %>
            <%= javascript_tag do %>
            $(function() {
            if ("placeholder" in document.createElement("input")) {
            $("#username").attr('placeholder', I18n.t('activerecord.attributes.user.email'));
            } else {
            $("#username").watermark(I18n.t('activerecord.attributes.user.email'),"#666");
            }
            $("#password").watermark(I18n.t('activerecord.attributes.user.password'),"#666");
            });
            <% end %>
          </ul>
        </li>
        <!--sign_up-->
        <a href="<%=new_user_registration_path%>"class="signin">
          <%=t("sign_up")%>
        </a>
      </div>
    </div>
  </div>
</header>


<script src="jquery.fittext.js"></script>
<script type="text/javascript">
$("#fittext2").fitText(0.96);
</script>