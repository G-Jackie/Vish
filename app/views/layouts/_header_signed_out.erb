<div class="row">
  <div class="space_center"></div>
  <div class="span6">

    <div class="logo-home ">
      <%= link_to(image_tag('logo.png', :alt => t('site.name')), '/', :class => "brand "); %>
    </div>

    <span class="link_virtual size24 virtualsciencehub span3 ">
      <%= link_to(t('site.name'), '/', :class => "brand"); %>
    </span>
  </div>

  <div class="span6 pull-right">
  <%= form_for User.new, :as => :user, :url => user_session_path do |f| -%>
    <div class="pagination-right">
      <%= f.email_field :email, :id => "username" %>
      <%= f.password_field :password, :id => "password"  %>
      <%= f.submit t(:sign_in), :class => 'other_blue storePass'%>
    </div>

  <div class="link_gray pagination-right span3 offset3">
    <%= link_to t('sign_up'), new_user_registration_path %>
  </div>
  <% end -%>

  <div class="space_center"></div>

  <div id="header_search" class="span3 offset3">
    <%= render :partial => 'layouts/search', :locals => { :sizeFieldSearch => "input-large" } %>
  </div>
</div>

<div class="space_center"></div>

<div id="flash">
  <%= render :partial => "layouts/flash", :locals => {:flash => flash} %>
</div>

<div class="space_center"></div>
