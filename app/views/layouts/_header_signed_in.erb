<div class="row">
  <div class="span6">
    <%= link_to(image_tag('logo.png', :alt => t('site.name')), '/', :class => "brand inline-block"); %>
    <span class="inline-block link_gray"><h2><%= link_to(t('site.name'), '/', :class => "brand"); %></h2></span>
  </div>
  <div class="login span6">

      <% if user_signed_in? %>
        <div class="menu_list menu_white" id="menu_home">
          <ul>
            <li><%= link_to(t('home'), root_path)%></li>
            <li class="pipe">路</li>
            <li><%= link_to(t('profile.one'), current_subject)%></li>
            <li class="pipe">路</li>
            <li>
              <%= link_to(t('message.other'), conversations_path) %>
              <span id="header_inbox_count">
              <%= link_to(current_subject.unread_messages_count.to_s, conversations_path) %>
              </span>
            </li>
            <li class="pipe">路</li>
            <li>
              <%= link_to(t('notification.other'), notifications_path) %>
              <span id="header_notifications">
              <%= link_to( current_subject.mailbox.notifications.not_trashed.unread.count.to_s, notifications_path) %>
              </span>
            </li>
            <li class="pipe">路</li>
            <li>
              <%= render :partial => 'layouts/header_dropdown_menu' %>
            </li>
          </ul>
        </div>
      <% end %>

    <div id="header_search">
      <%= render :partial => 'layouts/search' %>
    </div>
  </div>
</div>
