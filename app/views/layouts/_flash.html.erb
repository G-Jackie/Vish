<% flash.each do |name, msg| %>
	<% case name %>
	<% when :notice %>
  		<div class="<%= name %> alert alert-success span4 pull-right pagination-right alert-margin ">
  	<% when :alert %>
  		<div class="<%= name %> alert alert-error span4 pull-right pagination-right alert-margin ">
 	<% else :info %>
  		<div class="<%= name %> alert alert-info span4 pull-right pagination-right alert-margin ">
 	<% end %>
    <%= msg %>
  </div>
<% end %>