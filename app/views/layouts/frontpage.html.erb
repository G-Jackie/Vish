<!DOCTYPE html>
<html lang="<%= I18n.locale.to_s %>">
<%= render :partial => 'layouts/head' %>
<body>
  <div class="wrapper">

      <section class="container">
        <header class="header">
          <%= render :partial => "layouts/header_frontpage" %>
        </header>        
        <article class="agrupation-search-frontpage">
          <%= yield %>
        </article>
    </section>
    
    <section id="top" class="white"> 
      <div class="container">
        <div class="top-10">
          <%=t('top10')%>
        </div>
          <% self.class.send :include, FrontpageHelper  %>
          <% for excursion in current_top_actor_excursions %>
          <%= render :partial => "excursions/top10",:locals => { :excursion => excursion} %>
          <% end %>
      </div>
    </section> 

    <section class="container" style="display:none"> 
      <%= render :partial => "news/index" , :locals => {extra_class: "frontpage_announce"} %>
    </section> 

    <div class="push"></div> 
  
  </div>
  <footer class="footer">
    <%= render :partial => "layouts/footer" %>
  </footer> 
  <script type="text/javascript">
setTimeout(function(){var a=document.createElement("script");
var b=document.getElementsByTagName("script")[0];
a.src=document.location.protocol+"//dnn506yrbagrg.cloudfront.net/pages/scripts/0014/0195.js?"+Math.floor(new Date().getTime()/3600000);
