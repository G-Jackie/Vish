<!-- HTML5 DOCTYPE -->
<!DOCTYPE html>
<html lang="<%= I18n.locale.to_s %>">
<%= render :partial => 'layouts/head' %>
<body>
  <div class="wrapper">
    <section class="container">
      <div class="row">
        <header class="headerfront">
         <%= render :partial => "layouts/header_frontpage" %>
        </header>
        <article class="flash">
          <%= render :partial => "layouts/flash", :locals => {:flash => flash} %>
        </article>
        <article class="agrupation-search-frontpage">
          <%= yield %>
        </article>
        <article class="top">
          <p class="top-10">
            <%=t('top10')%>
          </p>
          <% self.class.send :include, FrontpageHelper  %>
          <% for excursion in current_top_actor_excursions %>
          <%= render :partial => "excursions/top10",:locals => { :excursion => excursion} %>
          <% end %>
        </article>       
        <div class="push"></div> 
      </div>
    </section>
     <footer class="footer">
      <%= render :partial => "layouts/footer" %>
    </footer>
</div>
</body>
</html>
