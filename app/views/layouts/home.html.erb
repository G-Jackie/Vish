<!DOCTYPE html>
<html lang="<%= I18n.locale.to_s %>">
<%= render :partial => 'layouts/head' %>
<body>
<div class="container">
  <header id="headerFront row span12">
    <%= render :partial => "layouts/header" %>
  </header>
  <div class="row">
