<div class="block" id="language_settings">
  <div class="header">
    <div class="header_text">
 		<%= t("account.lang.change")%>
    	<div class="header_icon_right">
 			<%= link_to (image_tag('icons/edit_icon.png', :class=>"unborder")),  "javascript:showSettings(\"language_settings\");" %>
    	</div>
	</div>
  </div>
  <div class="content settings_content" id="language_settings_content" style="display:none;">
    <%= form_tag update_all_settings_path, :method => :put, :id => 'form_lang', :remote => false do %>
    <div class="form_row">
 <div class="form_label"><%= label_tag :language, t('settings.lang_change.name') %></div>
 <div class="form_field">
 <%= select_tag(:language, options_for_select([[t('lang.browser'), 'browser']] + I18n.available_locales.map{|l| [ t(:language_name, :locale => l.to_s), l.to_s ] }, (current_user.language.blank? ? 'browser' : current_user.language)), :class => 'form_tag', :onchange => "$(\'#form_lang\').submit();" )%>
 </div>
    </div>
            <div class="actions center">
                <%= hidden_field_tag :settings_section, :language %>
		<noscript>
                <%= submit_tag "Update Settings", :class => "button" %>
		</noscript>
            </div>
    <% end%>
  </div>
</div>

