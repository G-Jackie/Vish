<!--recomended-->
  <aside class="recomended">
    <ul class="items clearfix">
      <% popular_resources(16).each do |resource| %>
        <% if resource.class == Excursion %>
          <%= render :partial => 'excursions/excursion', :locals => { :excursion => resource } %>
        <% else %>
          <%= render :partial => 'repositories/resource', :locals => { :resource => resource } %>
        <% end %>
      <% end %>
    </ul>
  </aside>


<script type="text/javascript">
  $(document).ready(function(){
    $("#recomended_box div[bs-img]").each(function() {       
        $(this).backstretch( $(this).attr("bs-img") );      
    });
  });
</script>