<div class="row" id="tags_info">
  <div class="space_center"></div>
  <div class="header">
    <div class="header_text2">
      <%= t('profile.tags.other') %>
      <% if is_owner? %>
        <div class="header_icon_right">
          <%= link_to (image_tag('icons/edit_icon.png', :class=>"unborder")), :controller => :profiles,
                      :action => :edit, :section => "tags" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row span6 boxy_white">
    <div class="space_center"></div>
    <div class="content">
      <div class="field_profile">
        <% if @profile.subject.tag_list.count > 0 %>
          <%= @profile.subject.tag_list %>
          </div>
        <% else %>
          <div id="field_profile_field_empty">
            <%= t('profile.empty') %>
          </div>
        <% end %>
        <div class="space_center"></div>
        </div>
  </div>
</div>
