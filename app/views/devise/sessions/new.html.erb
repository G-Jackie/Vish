<div class="container ">
  <div class="row span4 offset1">
    <h1><span class="dark-gray"><%= t('sign_in') %></span></h1>
  </div>
  <div class="row space_double_center"></div>
  <div class="row span6 offset4">
    <p class="size18"><%= t('devise.passwords.instructions') %></p>
  </div>

  <div class="row span6 offset4 boxy_gray">
    <%= form_for(resource, :as => resource_name, :url => user_session_path,  :html => { :method => :post, :class=>"form-horizontal" }) do |f| %>
      <fieldset>
        <div class="control-group">
          <%= devise_error_messages! %>
        </div>
        <div class="control-group">
          <label class="control-label" for="email"><%= f.label :email %></label>
          <div class="controls">
            <%= f.text_field :email, :class => "input-xlarge", :id => "email" %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="password"><%= f.label :password %></label>

          <div class="controls">
            <%= f.password_field :password, :class => "input-xlarge", :id => "password" %>
          </div>
        </div>
        <% if devise_mapping.rememberable? -%>
        <div class="control-group">
          <div class="controls">
            <%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "inline" %>
          </div>
        </div>
        <% end -%>

        <div class="form-actions pagination-right space_right">
          <%= f.submit t('action.send'), :class =>"button" %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
<div class="row space_double_center"></div>
<div class="row space_double_center"></div>