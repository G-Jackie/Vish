<div class="container ">
  <div class="row span4 offset1">
    <h1><span class="dark-gray"><%= t('devise.passwords.forgot') %></span></h1>
  </div>
  <div class="row space_double_center"></div>
  <div class="row span6 offset4">
    <p class="size18"><%= t('devise.passwords.instructions') %></p>
  </div>
  <div class="row span6 offset4 boxy_gray">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class=>"form-horizontal" }) do |f| %>
      <fieldset>
        <div class="control-group">
          <%= devise_error_messages! %>
        </div>
        <div class="control-group">
          <label class="control-label" for="email"><%= f.label :email %></label>
          <div class="controls">
            <%= f.text_field :email, :class => "input-xlarge", :id => "email" %>
          </div>
        </div>
        <div class="form-actions pagination-right space_right">
          <%= f.submit t('action.send'), :class =>"button" %>
        </div>
      </fieldset>
    <% end %>
  </div>
  <div class="row span6 offset4 link_gray" id="devise_links">
    <%= render :partial => "devise/shared/links" %>
  </div>
</div>
<div class="row space_double_center"></div>
<div class="row space_double_center"></div>
