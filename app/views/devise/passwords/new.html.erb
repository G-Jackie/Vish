<section id="forgot-pass">
  <section class="forgot">
    <h3><%=t('devise.passwords.forgot')%></h3>
    <p><%=t('devise.password_forgot_instructions')%></p>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      
      <%= devise_error_messages! %>

      <%= f.label :email %>

      <%= f.text_field :email, :class => "form_tag", :placeholder => t('devise.passwords.instructions') %>
        
      <%= f.submit t('action.send'), :class => "btn" %>

      <hr class="soften">

      <%= render :partial => "devise/shared/links" %>

    <% end %>
    
  </section>
</section>


