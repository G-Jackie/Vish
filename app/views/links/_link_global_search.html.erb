<div class="model_with_details span3 box-result">
  <%= javascript_tag do %>
    <%= modal_for(link.author.subject) %>
  <% end %>
  <ul class="thumbnails">
    <li class="span1 margin-clear">
      <%= link_to  "", link, :class => icon75_class_for(link) , :alt => link.title %>
    </li>
    <li class="span">
      <div class="caption">
        <h4><span class="size16"><%= link_to truncate_name(link.title, :length => 20), link, :class => "size14" %></span></h4>
        <h5 class="blue-opacity"><span class="size11">by <a data-toggle="modal" href="#user-modal-<%= link.author.slug %>" class="user-modal-button-<%= link.author.slug %>"><%= truncate_name(link.author.name, :length => 20)%></a></span></h5>
        <h5>
          <span class="green like_count_<%= dom_id(link.activities.first) %>"><%=link.activities.first.likes.count.to_s%></span>
          <div class="verb_like" id="like_<%= dom_id(link.activities.first) %>"><%= link_like(link.activities.first)%></div>
        </h5>
      </div>
    </li>
  </ul>
</div>

