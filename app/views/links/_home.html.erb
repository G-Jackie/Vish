<%= div_for link, :class => 'span3', :style => 'padding: 0; margin-top: 0;' do %>
  <% link_title = link.title %>
  <% link_title = link.url if link_title.blank? %>
  <ul class="thumbnails">
    <li class="span">
      <div id="margin-resources">
      <% if link.callback_url %>
        <a data-toggle="modal" href="#link-modal-<%= link.id.to_s%>" class="<%= icon_class_for(link) %> link-modal-button-<%= link.id.to_s%>"></a>
      <% else %>
        <%= link_to  "", link.url, :class => icon_class_for(link), :alt => link_title, :target => "_blank" %>
      <% end %>
      </div>
    </li>
    <div class="row-fluid-100">
      <h4 class="link_gray size15 ellipsis w150px">
        <% if link.callback_url %><a data-toggle="modal" href="#link-modal-<%= link.id.to_s%>" class="link-modal-button-<%= link.id.to_s%>"><% else %><a href="<%= link.url %>" target="_blank"><% end %><%= link.title %></a>
      </h4>
        <div class="rw-words rw-words-1">
          <span><h5 class="green inline">by </h5><h5 class="link_gray inline ellipsis w120px"><a data-toggle="modal" href="#user-modal-<%= link.author.slug %>" class="user-modal-button-<%= link.author.slug %>"><%= link.author.name %></a></h5></span>
          <div class="clearfloat"></div>
          <span><h5 class="green inline margin-home-resource-view like_count_<%= dom_id(link.activities.first) %>"><%=link.activities.first.likes.count.to_s%></h5> <div class="verb_like" id="like_<%= dom_id(link.activities.first) %>"><%= link_like(link.activities.first)%></div></span>
        </div>
    </div>
  </ul>

  <%= javascript_tag do %>
    <%= modal_for(link) %>
    <%= modal_for(link.author.subject) %>
  <% end %>

<% end %>
