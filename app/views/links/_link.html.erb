<%= div_for link, :class => 'row-fluid' do %>
  <% if link.callback_url %>
    <div class="modal hide" id="link-modal-<%= link.id.to_s%>">
      <div class="modal-header"><h3 class="text-center"><%= truncate_name(link.title, :length => 75) %></h3></div>
      <div class="modal-body text-center" id="link-modal-body-<%= link.id.to_s%>">
        <%= image_tag('loading.gif', :class => :loading) %>
      </div>
      <div class="modal-footer">
        <div class="menu_resources">
          <div class="verb_like" id="like_<%= dom_id(link.activities.first) %>"><%= link_like(link.activities.first, :size => :big)%></div>
        </div>
        <a href="#" class="btn btn-danger link-modal-close-<%= link.id.to_s%>" data-dismiss="modal"><%=t('close')%></a>
        <%= link_to t('details.msg'), link, :class => "btn btn-success" %>
      </div>
    </div>
  <% end %>

  <ul class="thumbnails">
    <li class="span3">
      <% if link.callback_url %><a data-toggle="modal" href="#link-modal-<%= link.id.to_s%>" class="container link-modal-button-<%= link.id.to_s%>"><% else %><a href="<%= link.url %>" target="_blank" class="container"><% end %><% if link.image %><%= image_tag(link.image) %><% else %><i class='icon_repository75-75_link'></i> <% end %></a>
    </li>
    <li class="span9">
      <div class="title">
        <h4 class="bold">
          <% if link.callback_url %><a data-toggle="modal" href="#link-modal-<%= link.id.to_s%>" class="link-modal-button-<%= link.id.to_s%>"><% else %><a href="<%= link.url %>" target="_blank"><% end %><%= truncate_name(link.title, :length => 35) %></a>
        </h4>
      </div>
      <p><%= simple_format link.description %></p>
      <p><%= link_to t('details.msg'), link, :class => "attachment_text_link" %></p>
    </li>
  </ul>

  <%= content_for :javascript do %>
    $(".link-modal-button-<%= link.id.to_s%>").on("click", function(){
      SocialStream.Linkser.Wall.openCallback("link-modal-body-<%= link.id.to_s %>", "<%= link.callback_url %>", "<%= link.width %>", "<%= link.height %>");
    });
    $(".link-modal-close-<%= link.id.to_s%>").on("click", function(){
      $("#link-modal-<%= link.id.to_s%> .modal-body").html ("<%= raw j image_tag('loading.gif', :class => :loading) %>");
    });
  <% end %>

<% end %>

<div class="clearfloat"></div>
