<div class="quick_search">
  <div class="photo">
    <%= link_to "<i class=\"icon-link\"></i>".html_safe, link, :title => link.title %>
  </div>
  <div class="data">
    <div class="name">
      <%= link_to link.title, link %>
    </div>
    <div class="author"> 
      <%= link_to truncate_name(link.author.name, length: 25), link.author.subject %>
    </div>
  </div>
</div>