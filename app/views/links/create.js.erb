<% if @link.valid? %>
  //Display the new post
  $("#wall").prepend("<%= escape_javascript(render @link.post_activity) %>");
  $("#wall-me").prepend("<%= escape_javascript(render @link.post_activity) %>");

  SocialStream.Timeline.create("<%= escape_javascript dom_id(@link.post_activity) %>");
<% else %>
  SocialStream.Timeline.create();
  alert('<%= j @link.errors.full_messages.to_sentence %>');
<% end %>

