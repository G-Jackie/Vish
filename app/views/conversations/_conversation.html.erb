<%= div_for(conversation, :class => read_class) do %>
<div class="notification ">
</div>
    <div class="message">
    <div class="inline span3">
      <div class="sender_photo span1">
	<%= link_to image_tag(conversation.last_sender.logo.url(:actor),
	:title => conversation.last_sender.name, :alt => conversation.last_sender.name),
	conversation.last_sender.subject %>
</div>
    <div class="dat inline-block offset1">
	<div class="sender_name inline-block">
		<%= link_to truncate_name(conversation.last_sender.name), conversation.last_sender.subject %>
	</div>
	<div class="date">
		<%= t('time.ago', :time => time_ago_in_words(conversation.updated_at)) %>
	</div>
</div>
    </div>
<div class="content_right span6 offset3">
	<div class="subject tittle_mens size14">
		<%= link_to(truncate(conversation.subject, :length => 70), conversation_path(conversation.id,:box => @box,:page => params[:page])) %>
	</div>
	<div class="briefing">
		<%= raw(truncate(strip_tags(conversation.last_message.body), :length => 60)) %>
	</div>
	<div class="clearfloat">
	</div>
</div>
      </message>
<% unless @box.eql?'trash' %>
<div class="action span1 offset8">
  <% link_to(image_tag('btn/btn_read.png', :alt => t('mailboxer.mark_as_read'), :title => t('mailboxer.mark_as_read'))) %>
	<%= link_to(image_tag('delete.png', :alt => t('mailboxer.delete'), :title => t('mailboxer.delete')),
	conversation_path(conversation, :location => @box, :box => @box, :page => params[:page]),
	:confirm => t('mailboxer.delete_confirm', :object => conversation.subject),
	:method => :delete, :remote => true) %>
</div>
<% end %>
<div class="clearfloat">
</div>
<% end %>
