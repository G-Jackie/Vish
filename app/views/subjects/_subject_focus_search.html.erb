<div class="model_with_details span3 box-result users_btn_follow">
  <ul class="thumbnails">
    <li class="span1 margin-clear">
      <%= link_to(image_tag(subject.logo.url(:profile)), subject, :class => "container") %>
    </li>
    <li class="span2">
      <div class="caption">
        <h4><span class="size14"><%= link_to truncate_name(subject.name, :length => 40), subject %></span></h4>
        <h5><%=t('follow.followers')%>: <span class="dark-gray"><%=subject.follower_count%></span></h5>
        <div class="follwrs-ing">
          <div class="follwrs upfoll"><%=subject.followers.count  %>  <%= t('follow.followers') %></div>
        </div>
        <div class="send_messag size10 red-2 upfoll"><%=contact_to(subject) %></div>
      </div>
    </li>
  </ul>
</div>