<div class="model_with_details span3 box-result">
  <ul class="thumbnails">
    <li class="span1 margin-clear">
      <%= link_to  "", document, :class => icon75_class_for(document) , :alt => document.title %>
    </li>
    <li class="span">
      <div class="caption">
        <h4><span class="size16"><%= link_to truncate_name(document.title, :length => 20), document, :class => "size14" %></span></h4>
        <h5 class="blue-opacity"><span class="size11">by <a data-toggle="modal" href="#user-modal-<%=document.author.slug %>" class="user-modal-button-<%=document.author.slug %>"><%= truncate_name(document.author.name, :length => 20)%></a></span></h5>
        <h5><span class="green"><%=document.visit_count.to_s%></span> <%= t("follow.views") %></h5>
        <h5>
          <span class="green like_count_<%= dom_id(document.activities.first) %>"><%=document.activities.first.likes.count.to_s%></span>
          <div class="verb_like" id="like_<%= dom_id(document.activities.first) %>"><%= link_like(document.activities.first)%></div>
        </h5>
      </div>
    </li>
  </ul>
</div>

