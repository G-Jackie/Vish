<div class="model_with_details span3 box-result">
  <ul class="thumbnails">
    <li class="span1 margin-clear">
      <%= link_to  "", document, :class => icon75_class_for(document) , :alt => document.title %>
    </li>
    <li class="span">
      <div class="caption">
        <h4><span class="size16"><%= link_to truncate_name(document.title, :length => 40), document, :class => "size14" %></span></h4>
        <h5><span class="green"><%=document.visit_count.to_s%></span> <%= t('follow.views') %></h5>
      </div>
    </li>
  </ul>
</div>