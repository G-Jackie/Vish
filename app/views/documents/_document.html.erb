<%= div_for document, :class => 'row-fluid' do %>
  <ul class="thumbnails">
    <li class="span3">
      <%= link_to raw("<i class='icon75-default'></i>"), document, :class => "" %>
    </li>
    <li class="span9">
      <div class="title">
        <h4 class="bold"><%= link_to truncate_name(document.title, :length => 35), document %></h4>
     </div>

      <p><%= simple_format auto_link(document.description) %></p>
      <p><%= link_to t('details.msg'), document, :class => "attachment_text_link" %></p>
    </li>
  </ul>
<% end %>

<div class="clearfloat"></div>

