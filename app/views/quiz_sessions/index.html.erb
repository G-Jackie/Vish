<section id="quiz">
  <div class="whiteframe">
    <legend><%=t('quiz.live')%></legend>
    <div class="textrow">
      <h4><%=t('quiz.open')%></h4>
      <ul id="sortable1" class="connectedSortable">
        <% @quiz_active_sessions.each do |q| %>
          <li class="ui-state-default" data-target="#QuizAnalitycs" data-toggle="modal" data-remote=<%="/quiz_sessions/#{q.id}/results.full"%>>
            <% if q.name %>
              <%= q.name %>
            <% else %>
              <%=t('quiz.untitled')%>
            <% end %>
            <a class="quiz_session_action with_tooltip delete btn popover-link" title="Close" href=<%="#{q.close_url}"%>>
              x
            </a>
            <a class="quiz_session_action with_tooltip delete btn popover-link" title="Remove" href=<%="#{q.delete_url}"%>>
              <i class="icon-trash"></i>
            </a>
            <p class="creation_date">
              <%=t('quiz.createdAt')%> <%= q.created_at %>
            </p>
          </li>
        <% end %>
      </ul>
    </div> 
    <div class="textrow"> 
      <h4><%=t('quiz.close')%></h4>
      <ul id="sortable2" class="connectedSortable">
        <% @quiz_inactive_sessions.each do |q| %>
          <li class="ui-state-default" data-target="#QuizAnalitycs" data-toggle="modal" data-remote=<%="/quiz_sessions/#{q.id}/results.full"%>>
            <% if q.name %>
              <%= q.name %>
            <% else %>
              <%=t('quiz.untitled')%>
            <% end %>
            <a class="quiz_session_action with_tooltip delete btn popover-link" title="Remove" href=<%="#{q.delete_url}"%>>
              <i class="icon-trash"></i>
            </a>
            <p class="creation_date">
              <%=t('quiz.openPeriod')%> <%= q.created_at %> - <%= q.closed_at %>
            </p>
          </li>
        <% end %>
      </ul>      
    </div>
  </div>
</section>

<div id="QuizAnalitycs" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="QuizLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
    <p></p>
  </div>
  <div class="modal-body">
    <!-- This body is replaced with show_results.html.erb every time the modal is called -->
  </div>
  <div class="modal-footer"> </div>
</div>


<%= content_for :javascript do %>
  $('#QuizAnalitycs').on('hidden', function() {
    $(this).removeData('modal');
  });
  $(".quiz_session_action").click(function(event){
    event.stopPropagation();
  });
<% end %>


