<%= form_for @quiz_session, :class => "form-group" do |f| %>
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		<h4>Edit Quiz</h4>
	</div>

	<div class="modal-body">
		<article class="quiz_sessions">
		  <label><%= t('quiz.legend.name')%></label>
	  	<%= f.text_field :name, :class => "form-control", :placeholder => t('quiz.untitled') %>
	  	<% status = [[t('quiz.opened'), 'true'], [t('quiz.closed'), 'false']] %>
	  	<%= f.select :active, status, {}, { :class=> "form-control select_options" } %>
		</article>
	</div>

	<div class="modal-footer">
		<%= f.submit t('save'), :class => "btn btn-primary updateQuizButton" %>
	</div>

<% end %>

<script type="text/javascript">
	document.addEventListener("DOMContentLoaded", function(){
	 	var qName = '<%=qName%>';
	 	$('#QuizEdit').find(".modal-header").find("p").html(qName);
	});
</script>
