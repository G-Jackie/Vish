<%= div_for swf, :class => 'row-fluid' do %>
  <div class="modal hide" id="swf-modal-<%= swf.id.to_s%>">
    <div class="modal-header"><h3 class="text-center"><%= truncate_name(swf.title, :length => 75) %></h3></div>
    <div class="modal-body text-center">
      <%= image_tag('loading.gif', :class => :loading) %>
    </div>
    <div class="modal-footer">
      <div class="menu_resources">
        <div class="verb_like" id="like_<%= dom_id(swf.activities.first) %>"><%= link_like(swf.activities.first, :size => :big)%></div>
      </div>
      <a href="#" class="btn btn-danger swf-modal-close-<%= swf.id.to_s%>" data-dismiss="modal"><%=t('close')%></a>
      <%= link_to t('details.msg'), swf, :class => "btn btn-success" %>
    </div>
  </div>

	<ul class="thumbnails">
    <li class="span3">
      <a data-toggle="modal" href="#swf-modal-<%= swf.id.to_s%>" class="container swf-modal-button-<%= swf.id.to_s%>"><iframe src="<%= swf.file %>" width="75" height="75" wmode="transparent">...</iframe></a>
    </li>
    <li class="span9">
      <div class="title">
        <h4 class="bold">
          <a data-toggle="modal" href="#swf-modal-<%= swf.id.to_s%>" class="swf-modal-button-<%= swf.id.to_s%>"><%= truncate_name(swf.title, :length => 35) %></a>
        </h4>
      </div>

      <p><%= simple_format (swf.description) %></p>
      <p><%= link_to t('details.msg'), swf, :class => "attachment_text_link" %></p>
    </li>
	</ul>

  <%= content_for :javascript do %>
    $(".swf-modal-button-<%= swf.id.to_s%>").on("click", function(){
      $("#swf-modal-<%= swf.id.to_s%> .modal-body").html("<iframe src='<%= swf.file %>' width='475' height='475'>...</iframe>");
    });
    $(".swf-modal-close-<%= swf.id.to_s%>").on("click", function(){
       $("#swf-modal-<%= swf.id.to_s%> .modal-body").html ("<%= raw j image_tag('loading.gif', :class => :loading) %>");
    });
  <% end %>

<% end %>

<div class="clearfloat"></div>
