<%= div_for swf, :class => 'row-fluid' do %>
	<ul class="thumbnails">
    <li class="span3">
      <a data-toggle="modal" href="#swf-modal-<%= swf.id.to_s%>" class="swf-modal-button-<%= swf.id.to_s%>"><i class='icon75-swf'></i></a>
    </li>
    <li class="span9">
      <div class="title">
        <h4 class="bold">
          <a data-toggle="modal" href="#swf-modal-<%= swf.id.to_s%>" class="swf-modal-button-<%= swf.id.to_s%>"><%= truncate_name(swf.title, :length => 35) %></a>
        </h4>
      </div>

      <p><%= simple_format (swf.description) %></p>
      <p><%= link_to t('details.msg'), swf, :class => "attachment_text_link" %></p>
    </li>
	</ul>

  <%= javascript_tag do %>
    $(".swf-modal-button-<%= swf.id.to_s%>").on("click", function(){
      <%= modal_for(swf) %>
      $("#swf-modal-<%= swf.id.to_s%> .modal-body").html("<iframe src='<%= swf.file %>' width='475' height='475'>...</iframe>");
    });
    $(".swf-modal-close-<%= swf.id.to_s%>").on("click", function(){
       $("#swf-modal-<%= swf.id.to_s%> .modal-body").html ("<%= raw j image_tag('loading.gif', :class => :loading) %>");
    });
  <% end %>

<% end %>

<div class="clearfloat"></div>
