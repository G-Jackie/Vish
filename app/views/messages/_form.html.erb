<legend> <div class= "red-1"><%= t('message.new')%></div></legend>
<%= form_tag messages_path, :method => :post , :class => "new_message" do %>
<% if @receipt and @receipt.errors.any? %>
<div class="error">
	<h2><%= pluralize(@receipt.errors.count, "error") %> prohibited this message from being sent:</h2>
	<ul>
		<% @receipt.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="block">
	  <div class="form_row">
      <%= label_tag t('mailboxer.form.recipients') %>
		</div>
	  <div class="form_row margin-negative">
      <%= select_tag :_recipients, "", :class => "required form_tag" %>

  </div>
	<div class="form_row">
      <%= label_tag t('mailboxer.form.subjects') %>
	</div>
	<div class="form_row">
		<%= text_field_tag :subjects,nil, :class => "required form_tag" %>
	</div>
	<div class="form_row">
      <%= label_tag t('mailboxer.form.body') %>
	</div>
	<div class="form_row span7" id="ck_editor" >
		<%= text_area_tag :body, nil,:rows =>6, :cols=> 53, :class => "required form_tag", :maxlength => 5000 %>
	</div>
	<div class="actions center">
		<%= submit_tag t('mailboxer.send'), :name => :send_message, :class => "button send offset5" %>
	</div>
</div>
<% end %>


