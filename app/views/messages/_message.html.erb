<%= div_for(message, :class => read_class) do %>
  <div class="boxy_white_message">
    <div class="inline span3">
      <div class="sender_photo span">
        <%= link_to image_tag(message.sender.logo.url(:contact),
                              :title => message.sender.name, :alt => message.sender.name),
                    message.sender.subject %>

      </div>

      <div class="dat inline-block offset1">
        <div class="link_gray inline-block message_name">
          <%= link_to truncate_name(message.sender.name), message.sender.subject %>
        </div>
        <div class="date">
          <%= t('time.ago', :time => time_ago_in_words(message.updated_at)) %>
        </div>
      </div>
    </div>
    <div class="content_right span5 dat">
      <div class="subject tittle_mens size14 blue-cake">
        <%= truncate(message.subject, :length => 70) %>
      </div>
      <div class="pre-message">
        <%= raw(message.body) %>
      </div>
      <div class="clearfloat">
      </div>
    </div>
    <div class="clearfloat">
    </div>
  </div>
<% end %>
