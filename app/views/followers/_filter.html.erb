  <div class="pull-right">
    <div class="menu_resources">
      <%= link_to image_tag("icon-follower.png",:class => "imgnoradio") + t('follow.find'), search_path(:type => "user"), :class => :action  %>
    </div>
  </div>

  <% end %>


<div class="clearfloat"></div>
<div class="space_center"></div>
