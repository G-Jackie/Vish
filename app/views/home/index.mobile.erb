<section>
    <nav>
        <article class="article">
            <div class="row-fluid">
                <div class="span12">
                    <div class="span2"></div>
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a data-toggle="tab" href="#excursions"><%= t('excursion.other')%></a>
                        </li>
                        <li>
                            <a data-toggle="tab" href="#timeline"><%= t('activity.timeline')%></a>
                        </li>
                    </ul>
                </div>
            </div>
        </article>
        <article class="article">
            <div class="tab-content">
                <div id="excursions" class="tab-pane active">
                  <div class="row-fluid">
                    <div class="span12">
                      <ul class="nav nav-pills" >
                        <li class="active"><a data-toggle="tab" href="#ex-1"><%= t('excursion.net') %></a></li>
                        <li class=""><a data-toggle="tab" href="#ex-2"><%= t('excursion.my') %></a></li>
                        <li class=""><a data-toggle="tab" href="#ex-3"><%= t('excursion.top') %></a></li>
                        <li class="" id="star"><a data-toggle="tab" href="#ex-4"><%= image_tag "star-MENU-active.png" %></a></li>
                      </ul>
                    </div>
                  </div>
                  <div class="tab-content">
                    <div id="ex-1" class="tab-pane active">
                      <div id="home-excursions-net">
                        <%= render :partial => 'excursions/filter_results', :locals => { :excursions => current_subject_excursions(:limit => 10) } %>
                      </div>
                    </div>
                    <div id="ex-2" class="tab-pane">
                      <div id="home-excursions-me">
                        <%= render :partial => 'excursions/filter_results', :locals => { :excursions => current_subject_excursions(:scope => :me, :limit => 10) } %>
                      </div>
                    </div>
                    <div id="ex-3" class="tab-pane">
                      <div id="home-excursions-more">
                        <% recommended_excursions = (defined? current_subject.excursion_suggestions) ? current_subject.excursion_suggestions(10) : current_subject_excursions(:scope => :more, :limit => 10) %>
                        <%= render :partial => 'excursions/filter_results', :locals => { :excursions => recommended_excursions } %>
                      </div>
                    </div>
                    <div id="ex-4" class="tab-pane">
                      <div id="home-excursions-fav">
                        <%= render :partial => 'excursions/filter_results', :locals => { :excursions => current_subject_excursions(:scope => :like, :limit => 10) } %>
                      </div>
                    </div>
                  </div>
                </div>
                <div id="timeline" class="tab-pane">
                    <%= render :partial => 'activities/wall', :locals  => { :activities => @activities_net, :is_active_wall => true } %>
                </div>
            </div>
        </article>
    </nav>
</section>
