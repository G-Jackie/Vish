<div class="quick_search">
  <div class="photo">

    <%= link_to "<i class=\"fa fa-code\"></i>".html_safe, embed, :title => embed.title %>

    <%= link_to icon(embed,false), embed, :title => embed.title %>

  </div>
  <div class="data">
    <div class="name">
      <%= link_to embed.title, embed %>
    </div>
    <div class="author"> 
      <%= link_to truncate_name(embed.author.name, length: 25), embed.author.subject %>
    </div>
  </div>
</div>