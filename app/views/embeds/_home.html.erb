<%= div_for embed, :class => 'span3' do %>
  <ul class="thumbnails">
    <li class="span">
      <div id="margin-resources">
      <a data-toggle="modal" href="#embed-modal-<%= embed.id.to_s%>" class="<%= icon_class_for(embed) %> embed-modal-button-<%= embed.id.to_s%>"></a>
      </div>
    </li>
    <div class="row-fluid-100">
      <h4 class="link_gray size15 ">
        <a data-toggle="modal" href="#embed-modal-<%= embed.id.to_s%>" class="embed-modal-button-<%= embed.id.to_s%>"><%= truncate_name embed.title, :length => 20 %></a>
      </h4>
        <div class="rw-words rw-words-1">
          <span><h5 class="green inline">by </h5><h5 class="link_gray inline"><%=link_to( truncate_name(embed.author.name, :length => 18), embed.author.subject)%></h5></span>
          <div class="clearfloat"></div>
          <span><h5 class="green inline margin-home-resource-view"><%=embed.visit_count.to_s%> </h5><%= t("follow.views") %> / <h5 class="green inline like_count_<%= dom_id(embed.activities.first) %>"><%=embed.activities.first.likes.count.to_s%></h5> <div class="verb_like" id="like_<%= dom_id(embed.activities.first) %>"><%= link_like(embed.activities.first)%></div></span>

        </div>
    </div>
  </ul>

  <%= javascript_tag do %>
    $(".embed-modal-button-<%= embed.id.to_s%>").on("click", function(){
      <%= modal_for(embed) %>
      $("#embed-modal-<%= embed.id.to_s%> .modal-body").html("<%= raw j embed.fulltext %>");
    });
      $(".embed-modal-close-<%= embed.id.to_s%>").on("click", function(){
      $("#embed-modal-<%= embed.id.to_s%> .modal-body").html ("<%= raw j image_tag('loading.gif', :class => :loading) %>");
    });
  <% end %>
<% end %>
