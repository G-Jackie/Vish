<%= div_for embed, :class => 'row-fluid' do %>
  <%= javascript_tag do %>
    <%= modal_for(embed) %>
  <% end %>

  <ul class="thumbnails">
    <li class="span3">
      <a data-toggle="modal" href="#embed-modal-<%= embed.id.to_s%>" class="embed-modal-button-<%= embed.id.to_s%>"><i class="icon_repository75-75_embed"></i></a>
    </li>

    <li class="span9">
      <div class="title">
        <h4 class="bold ellipsis w190px">
          <a data-toggle="modal" href="#embed-modal-<%= embed.id.to_s%>" class="embed-modal-button-<%= embed.id.to_s%>"><%= embed.title %></a>
        </h4>
      </div>
      <p><%= simple_format (embed.description) %></p>
      <p><%= link_to t('details.msg'), embed, :class => "attachment_text_link" %></p>
    </li>
  </ul>
<% end %>

<div class="clearfloat"></div>
