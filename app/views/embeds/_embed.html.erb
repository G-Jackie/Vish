<%= div_for embed, :class => 'row-fluid' do %>
  <ul class="thumbnails">
    <li class="span3">
      <%= link_to image_tag("icons/link_big_gray.png"),"javascript:void(0)" %>
      <%= link_to image_tag("btn/btn_play.png", :class => "play_button"),"javascript:void(0)" %>
      <%= javascript_tag do %>
        $("#embed_<%= embed.id.to_s %> img").each(function(){
          $(this).click(function(){
            // TODO: Open callback
          });
        });
      <% end %>
    </li>

    <li class="span9">
      <div class="title">
        <h4 class="bold"><%= truncate_name(embed.title, :length => 35) %></h4>
      </div>
      <p><%= simple_format auto_link(embed.description) %></p>
      <p><%= link_to t('details.msg'), embed, :class => "attachment_text_link" %></p>
    </li>
  </ul>
<% end %>

<div class="clearfloat"></div>
