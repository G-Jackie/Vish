
<% content_for :title do %>
<%= t('search.name')%> <%= params[:q].present? ? ": #{params[:q]}" : "" %>
<% end %>

<%# sidebar %>

<% toolbar if user_signed_in? %>

<div class="row"><span class="size40"><%=t('search.name') %></span></div>
<div class="row space_center"></div>



<div class="row">
  <section name="Search" class="span12">
    <div class="error" id="too_short_error" <%= 'style=display:block;' if too_short_query? %>><%#= t('search.at_least') %></div>

    <div class="search tabbable">
      <div  class="search tabbable">
        <ul class="nav nav-tabs" id="tab">
          <li class="active">
            <%= link_to t('search.show_all'),"#all", :data => {:toggle=>"tab"}%>
          </li>
          <% SocialStream.extended_search_models.each do |model_sym| %>
              <%= search_tab(model_sym) %>
          <% end %>
        </ul>
        <div class="tab-content">
          <%= render :partial => 'extended_search' %>
        </div>
      </div>
    </div>

  </section>
</div>


<%= javascript_tag do %>
  $(function() {
  SocialStream.Search.init();
  });
<% end %>
