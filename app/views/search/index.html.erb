<div class="row">
  <section name="Search" class="span12">
    <div class="error" id="too_short_error" <%= 'style=display:block;' if too_short_query? %>><%= t('search.at_least') %></div>

    <div class="search tabbable">
      <div  class="search tabbable">
        <ul class="nav nav-tabs">
          <li class="active">
            <%= link_to t('search.show_all'),"#all", :data => {:toggle=>"tab"}%>
            <%#= link_to content_tag(:span,
                                      t('search.show_all'),
                                      :class => "global #{ params[:focus].blank? && 'active' }"),
                          search_path(:search_query => params[:search_query]),
                          :remote => true %>
          </li>
          <% SocialStream.extended_search_models.each do |model_sym| %>
              <%= search_tab(model_sym) %>
          <% end %>
        </ul>
        <div class="tab-content">
          <div id="all" class="tab-pane active">
            <%#= render :partial => 'index' %>
          </div>
          <div id="excursion" class="tab-pane"></div>
          <div id="users" class="tab-pane"></div>
          <div id="resources" class="tab-pane"></div>
          <div id="tags" class="tab-pane"></div>
        </div>
      </div>
    </div>
  </section>
</div>


<%= javascript_tag do %>
  $(function() {
  SocialStream.Search.init();
  });
<% end %>
