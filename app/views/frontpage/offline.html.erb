<!-- HTML5 DOCTYPE -->
<!DOCTYPE html>
<html manifest="/offline/manifest">
<head>
    <%= javascript_include_tag "jquery" %>

    <%= favicon_link_tag "icons/favicon.ico" %>
    <%= stylesheet_link_tag "bootstrap" %>
    <%= stylesheet_link_tag "application" %>

	<script type="text/javascript">
		function start(){
			if(typeof(Storage)!=="undefined")
			{
				// Yes! localStorage and sessionStorage support!
			 	//get the array of presentations with their ids, i.e. {[1], [6], [78]}
			 	var list = localStorage.getItem("presentation_list");
			 	var pres = null;
			 	var div_to_add = null;
			 	if(list){
			 		list.each(function(index,id){
			 			pres = localStorage.getItem("presentation_"+id);
			 			if(pres){
			 				div_to_add = $('#div_for_excursion').clone();
			 				$(div_to_add).attr("id", "presentation_"+id);
							$(div_to_add).find(".excursion_title").html(pres.title);

			 				$("#excursion_list").append(div_to_add);
			 			}
			 		});
			 	}
			 	else{
			 		$("#excursion_list").html("<div>No cached excursions.</div>");
			 	}
			 	//save the presentation, we save the full json in case we need info about the slides in the future
			 	localStorage.setItem("presentation_"+presentation.id, JSON.stringify(presentation));

			}
			else
			{
				// Sorry! No web storage support..
			  	console.log("Sorry! No web storage support.");
			}
		}
	</script>
</head>
<body onload="start()">

<div class="span6 ">
