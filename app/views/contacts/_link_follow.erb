conversation_full<div class="<%= follow_link_class contact %>">
  <% if contact.sent? %>
    <div class="following-button">
      <%= t 'contact.following' %>
    </div>
    <div class="unfollow-button">
      <%= link_to t('contact.unfollow'), follower_path(contact), :method => :delete, :remote => true %>
    </div>
  <% else %>
    <div class="follow-button">
      <%= link_to t('contact.follow'), follower_path(contact), :method => :put, :remote => true %>
    </div>
  <% end %>
</div>
