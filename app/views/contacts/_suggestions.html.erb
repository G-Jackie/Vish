<% if user_signed_in? and (sgs = current_subject.contact_suggestions(2)).present? %>
  <h3 class="suggestion-title">
    <%= t('contact.suggestion.other') %>
  </h3>
  <%= render :partial => "contacts/contact", :collection => sgs, :locals => { :close_button => true } %>
  <div class="view-all">
    <%=link_to( t('view_all'), search_path(:type => "user"), :class => "btn btn-link" ) %>
  </div>
<% end %>



