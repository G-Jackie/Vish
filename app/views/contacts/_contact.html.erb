<%= div_for contact, :class => 'row' do %>
  <ul class="thumbnails span3">
    <li class="span1">
      <%= link_to(image_tag(contact.receiver.logo.url(:contact)),
                  contact.receiver_subject, :class => "container")  %>
    </li>
    <li class="span">
      <div class="caption elipsis">
        <h4><%= link_to(truncate_name(contact.receiver_subject.name), contact.receiver_subject, :class => "contact_link") %></h4>
        <h5><%= contact_brief(contact.receiver_subject) %></h5>
        <h5>
          <div class="link" id="contact_link<%= dom_id(contact.receiver_subject)%>"><%= contact_link(contact) %></div>
        </h5>
      </div>
    </li>
  </ul>
  <div class="close"><%= link_to 'X', contact, :method => :delete, :remote => true %></div>
  <div class="space_center">
  </div>  
<% end %>