<ul class="events">
  <% if profile_subject_is_current? %>
    <%= render partial: 'events/event-add' %>
  <% end %>

  <% subject_events(profile_or_current_subject, {:scope => scope, :limit => 0}).each do |event| %>
      <%= render :partial => 'events/event', :locals => { :event => event } %>
  <% end %>
</ul>






