<%= form_for @event.poster do |f| %>
  <% if f.object.new_record? %>
    <%= f.hidden_field :add_holder_event_id %>
  <% end %>

  <%= f.hidden_field :owner_id %>

  <%= f.file_field :file, onchange: 'showButton()' %>

  <%= f.submit t('event.poster.button') %>
<% end %>

<script>
  $(document).ready(function(){
    $("#edit_picture_<%=@event.poster.id%> input[name='commit']").addClass("hidden");
  });

  function showButton() {
    if ($("#picture_file").val() != "") {
      $("#edit_picture_<%=@event.poster.id%> input[name='commit']").removeClass("hidden");
    } else {
      $("#edit_picture_<%=@event.poster.id%> input[name='commit']").addClass("hidden");
    }
  }
</script>