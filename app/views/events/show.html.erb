<section id="event">

  <div class="event">
    <div class="box-show-resource">
      <!--visor-->
      <div class="container-visor-resource">
        <div class="elemento-visor-resource"></div>
        <div class="caja-visor-resource">

          <div class="icon-box" id="event-<%=@event.id%>">
            <% if @event.poster.new_record? %>
              <i class="icon-facetime-video"></i>
            <% else %>
              <%= image_tag(@event.poster.file) %>
              <script>
                $("#event-<%=@event.id%>").addClass("high")

              </script>
            <% end %>
            <% if can? :update, @event %>
              <div class="poster btn btn-primary">
                <%= link_to t('event.poster.update'), edit_event_path(@event, :poster => true), :remote => true %>
              </div>
            <% end %>
          </div>  
        </div>
      </div>
    </div>
    <div class="recomended-items-resource ">
      <div class="recomended_documents">
        <ul class="small-box clearfix">
          <% popular_resources(6).each do |resource| %>
            <%= render :partial => 'repositories/resource', :locals => { :resource => resource } %>
          <% end %>
        </ul>
      </div>
    </div>

  <div class="description-activity-resource">
    <div class="box_description">
      <!--tool-->
      <div class="excursion_tool">
        <%= render :partial => 'events/event-tool-tab', :locals => { :document => @event } %>
      </div>     
    </div>
    
    <!--activity-->
    <div class="activity-box-resource">
      <%= render :partial => 'common_documents/activity', :locals => { :document => @event } %>
    </div>
  </div>

</div>

</section>
