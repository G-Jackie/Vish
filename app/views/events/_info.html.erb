<div class="left-info">
  <div class="author">
    <div class="avatar">
      <%= link_to @event.author.subject do %>
      <%= image_tag @event.author.logo.url(:small) %>
      <% end %>
    </div>
  <div class="right-name">
    <p><%= truncate_name(@event.author.name, :length => 50) %></p>

    <div class="add">
      <% if user_signed_in?%>
        <%= contact_button(current_subject.contact_to!(@event.author)) %>
      <%else%>
        <%= contact_button(@event.author) %>
      <%end%>
    </div>
  </div>
</div>
</div>

<div id="effect" class="newClass ui-corner-all">
  <dl class="dl-horizontal">
    <%# unless document.description.blank? %>
      <dt><%= t 'document.info.description' %></dt>
      <dd><%= @event.description %></dd>
    <%# end%>

      <dt>Empieza el: </dt>
      <dd><%= @event.start_at %></dd>

      <dt>Termina el: </dt>
      <dd><%= @event.end_at %></dd>
      
      <!--div class="day">
        <%= @event.start_at.day %>
      </div>
      <div class="month">
        <%#= l @event.start_at, :format => "%B" %>
      </div>
      <div class="hour">
        <%#= l @event.start_at, :format => "%H:%M" %>
      </div>
      <div class="hour">
        <%#= l @event.end_at, :format => "%H:%M" %>
      </div-->
    <%# unless document.tag_list.blank? %>
      <!--dt><%#= t 'document.info.tags' %></dt>
     <dd><%#= tag_list document %></dd-->
    <%#end%>

  </dl>
</div>

<button href="#" id="showMore" status="showMore" class="ui-state-default ui-corner-all"><%=t('excursion.actions.show_more')%></button>

<script>
$(function() {
  $("#showMore").click(function(){
    $(".newClass").switchClass( "newClass", "anotherNewClass", 1000 );
    $(".anotherNewClass").switchClass( "anotherNewClass", "newClass", 1000 );
    if($("#showMore").attr("status")=== "showMore"){
      $("#showMore").html('<%=t("excursion.actions.show_fewer")%>');
      $("#showMore").attr("status", "showFewer");
    }
    else{
      $("#showMore").html('<%=t("excursion.actions.show_more")%>');
      $("#showMore").attr("status", "showMore");
    }
    return false;
  });
});
</script>
