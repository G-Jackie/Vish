<div class="left-info">
  <div class="author">
    <div class="avatar">
      <%= link_to @event.author.subject do %>
        <%= image_tag @event.author.logo.url(:small) %>
      <% end %>
    </div>
    <div class="right-name">
      <p>
        <%= truncate_name(@event.author.name, :length => 50) %>
      </p>
      <div class="add">
        <% if user_signed_in?%>
          <%= contact_button(current_subject.contact_to!(@event.author)) %>
        <%else%>
          <%= contact_button(@event.author) %>
        <%end%>
      </div>
    </div>
  </div>  
</div>

<div class="panel-group" id="accordion">
  <div class="panel">
    <header>
      <table class="table table-hover">  
        <tr>
          <td>Empieza el: </td>
          <td id="start"><%= @event.start_at %></td>
        </tr>
        <tr>
          <td>Termina el: </td>
          <td id="end"><%= @event.end_at %></td>
        </tr>
      </table>
    </header>

    <div id="collapseInfo" class="panel-collapse collapse">
      <div class="panel-body">
        <table class="table table-hover">
          <tr>
            <% unless @event.description.blank? %>
              <td><%= t 'document.info.description' %></td>
              <td><%= @event.description %></td>
            <% end%>
          </tr>
          <script>
            $("#start").text(new Date(Date.parse("<%=@event.start_at.iso8601%>")).toLocaleString());
            $("#end").text(new Date(Date.parse("<%=@event.end_at.iso8601%>")).toLocaleString());
          </script>

          <!--div class="day">
            <%= @event.start_at.day %>
          </div>
          <div class="month">
            <%#= l @event.start_at, :format => "%B" %>
          </div>
          <div class="hour">
            <%#= l @event.start_at, :format => "%H:%M" %>
          </div>
          <div class="hour">
            <%#= l @event.end_at, :format => "%H:%M" %>
          </div-->
          <%# unless document.tag_list.blank? %>
          <!--td><%#= t 'document.info.tags' %></td>
            <td><%#= tag_list document %></td-->
          <%#end%>
        </table>
      </div>
    </div>
  </div>
  <a class="expand" data-toggle="collapse" data-parent="#accordion" href="#collapseInfo">--- <%=t('excursion.actions.show_more')%> ---</a>
</div>


