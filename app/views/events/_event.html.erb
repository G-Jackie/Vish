<li class="box-item event-item" <%if defined?(obj_id)%>edit-id="<%=obj_id%>"<%end%>>
  <!-- corner -->
  <%= link_to(event) do %>
    <div class="corner-item">
      <div class="corner-item2">
        <div class="corner-color"></div>
        <i class='icon-facetime-video'></i>
      </div>
      <div class="corner-background"></div>
    </div>
    
    <!-- image/icon -->
    <div class="container-img">
        <div class="img-box resource-center" id="event-<%=event.id%>" >
            <i class='icon-facetime-video'></i>
        </div>
    </div>
  <% end %>

  <script>
      document.getElementById("event-<%=event.id%>").style.backgroundImage = "url('<%=event_raw_thumbail(event)%>')";
  </script>
  
  <!-- Info -->
  <div class="info">
    <!-- Title -->
    <div class="name">
      <%= link_to event.title, event %>
    </div>
    <!-- Autor -->
    <div class="author"> 
      <span class="by"><%=t('by')%></span>
      <%= link_to event.author.name, event.author.subject %>
    </div>
    <!--____________________ -->
    <div class="info-bottom">
      <hr class="soften">
      <!--like -->
      <div class="like">  
        <% if event.post_activity%>
        <div class="count"><%=event.post_activity.likes.count.to_s%></div>
        <%= link_like(event.post_activity, :title =>t('excursion.actions.favorite'))%>
        <%else%>
        <div class="count">0</div>
        <%end%>
      </div>
      <!--views -->
      <div class="views">
        <%=event.visit_count.to_s%>
        <i class="icon-eye-open"></i>
        <%#=t('follow.views')%>
      </div>
    </div>
  </div>
</li>