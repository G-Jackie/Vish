<p id="notice"><%= notice %></p>

<iframe id="excursion_iframe" src="<%=edit_excursion_path(@excursion, :format => :full)%>" width="910" height="750" style="border:0" iframeborder="0" frameborder="0" iframeElement.frameBorder = 0;></iframe>

<% if user_signed_in? and  @excursion.post_activity.direct_object && can?(:destroy, @excursion.post_activity.direct_object) %>
   <%= link_to content_tag(:span, t('excursion.actions.delete'), :class => :action), @excursion.post_activity.direct_object , :confirm => t('confirm_delete',
     :scope => @excursion.post_activity.direct_object.class.to_s.underscore), :method => :delete %>
   <% end %>

<% content_for :javascript do %>
        function setFavicon() {
		  var link = $('link[type="image/vnd.microsoft.icon"]').remove().attr("href");
		  $('<link href="'+ link +'" rel="shortcut icon" type="image/x-icon" />').appendTo('head');
		}
        
        location.href = "#excursion_iframe";
        setFavicon();
<%end%>
