<div class="left-info">
  <!--author-->
  <%= render :partial => 'excursions/items-owner-profile' %>
  <!--tittle-->
  <div class="viewsAndConunt">        
    <div class="views">
      <%=@excursion.visit_count.to_s%> 
      <span>
        <%=t('follow.views')%>
      </span>   
    </div>
    <%unless @excursion.post_activity.nil?%>
      <div class="like">    
        <div class="count"><%=@excursion.post_activity.likes.count.to_s%></div>
        <%= link_like(@excursion.post_activity)%>
      </div>
    <%end%>
  </div>  
</div>

<div id="effect" class="newClass ui-corner-all">
  <dl class="dl-horizontal">
    <% unless @excursion.contributors.blank? %>
      <!--contributors-->
      <dt><%= t('excursion.contributors.name').capitalize %></dt>
      <dd>
        <% @excursion.contributors.uniq.each_with_index do |c,index| %>
          <% unless index==0 %>
            ,
          <% end %>
          <%= link_to c.name, c.subject %>
        <%end%>
      </dd>
    <%end%>

    <% unless @excursion.description.blank? %>
      <!--description-->
      <dt><%= t('info.description') %></dt>
      <dd><%= truncate(@excursion.description, :length => 400) %></dd>
      <% end %>
      <% unless @excursion.tag_list.blank? %>
      <!--tags-->
      <dt><%= t('info.tags') %></dt>
      <dd>
        <ul class="tagit-suggestions">
          <% @excursion.tag_list.each do |tag| %>
          <li class="tagit-choice">
            <%= link_to tag, search_path(:q => tag) %>
          </li>
          <% end %>
        </ul>
      </dd>
    <% end %>

    <% unless @excursion.readable_language.blank? %>
      <!--language-->
      <dt><%= t('lang.title').capitalize %></dt>
      <dd><%= @excursion.readable_language %></dd>
    <% end %>
      
    <!--date-create
    <div class="tittle-notebook">
    <%= t('document.info.date.created_at') %>
    </div>
    <div class="text-notebook">
    <%= I18n.localize @excursion.created_at, :format => :long %>
    </div>
    -->

    <!--date-upload-->
    <dt><%= t('document.info.date.updated_at') %></dt>
    <dd><%= I18n.localize @excursion.updated_at, :format => :long %></dd>
    <dt></dt>
    <dd>
      <button href="#MetadataModal" id="showMeta" data-toggle="modal" class="ui-state-default ui-corner-all">
      <%=t('excursion.actions.show_meta')%></button>
    </dd>

  </dl>
</div>

<button href="#" id="showMore" status="showMore" class="ui-state-default ui-corner-all">
  <a><%=t('excursion.actions.show_more')%></a>
</button>

<div id="MetadataModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myMetadataLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myMetadataLabel"><%= t('excursion.modal.metadata_title') %></h3>
  </div>
  <div class="modal-body">
    <ul class="metadatalist">
    <% @excursion.metadata.each do |key, value| %>
      <%unless value.blank?%>
        <li>
          <span class="metadatalistkey"><%=key%>:</span>
          <span class="metadatalistkey2"><%=value%></span>
        </li>
      <%end%>
    <%end%>
    <li>
      <span class="metadatalistkey"><%=t("metadata.access_lom")%>:</span>
      <span class="metadatalistkey2"><a href="<%=excursion_metadata_path(@excursion)%>"><%=Vish::Application.config.full_domain + excursion_metadata_path(@excursion)%></a></span>
    </li>
  </ul>
  </div>
</div>

<script>
  $(function() {
    $("#showMore").click(function(){
      $(".newClass").switchClass( "newClass", "anotherNewClass", 1000 );
      $(".anotherNewClass").switchClass( "anotherNewClass", "newClass", 1000 );
      if($("#showMore").attr("status")=== "showMore"){
        $("#showMore").html('<a><%=t("excursion.actions.show_fewer")%></a>');
        $("#showMore").attr("status", "showFewer");
      }
      else{
        $("#showMore").html('<a><%=t("excursion.actions.show_more")%></a>');
        $("#showMore").attr("status", "showMore");
      }
      return false;
    });
  });
</script>
