            </button>
        </div>
        <div class="social_toolbar_excursion">
          <div class="twitter_toolbar_excursion">
            <%= render :partial=>'shareon/twitter', :locals=>{:url=>shortURL, :counturl=>('http://' + request.env['HTTP_HOST'].sub(/^(m|www)\./, '') + excursion_path(@excursion) )} %>
          </div>
