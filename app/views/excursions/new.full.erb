		    </div>		    
            <a id="save" href="#thumbcontent">
			    <div id="save_div" class='barbuttonaddsave'>
			    </div>
            </a>
		</div>
    </section>
  
  <div style='display:none'>
    <div id='thumbcontent'>
      <div class='templatethumb' template='1'>
	  <img src='/assets/templatesthumbs/t1.png' />
      </div>
      <div class='templatethumb' template='2'>
	  <img src='/assets/templatesthumbs/t2.png' />
      </div>
    </div>
  </div>
  
  
 <div style='display:none'>
	  	
	    <div id='menuselect'>
			  <div class='menuicon textthumb'></div>
	      <a class="addpicture" href="#picture_fancybox">
	        <div class='menuicon picthumb'></div>
	      </a>
	      <a class="addflash" href="#flash_fancybox">
	        <div class='menuicon flashthumb'></div>
	      </a>
	      <a class="addvideo" href="#video_fancybox">
	        <div class='menuicon videothumb'></div>
	      </a>
	    </div>
	    
	    <div id='menuselect_for_header'>
			  <div class='menuicon_small textthumb'></div>
	      <a class="addpicture" href="#picture_fancybox">
	        <div class='menuicon_small picthumb'></div>
	      </a>	      
	    </div>
	    
	  </div>
  
  
  <!-- IMAGE -->
	  <div style='display:none'>
	    <div id="picture_fancybox" class="outer_box">
				<div class="fancy_tabs">	   
				  <ul>
				    <li><a href="#" onclick="VISH.Editor.loadTab('tab_pic_from_url')" id="tab_pic_from_url" class="fancy_tab">URL</a></li>
				    <li><a href="#" onclick="VISH.Editor.loadTab('tab_pic_upload')" id="tab_pic_upload" class="fancy_tab">UPLOAD</a></li>
				    <li><a href="#" onclick="VISH.Editor.loadTab('tab_pic_repo')" id="tab_pic_repo" class="fancy_tab">VISH</a></li>
				    <li><a href="#" onclick="VISH.Editor.loadTab('tab_pic_flikr')" id="tab_pic_flikr" class="fancy_tab">FLIKR</a></li>
				  </ul>
				</div>
				<div id='tab_pic_from_url_content' class="fancy_tab_content">
				  Paste image url
				  <input id="picture_url" type="text" size="25" value="">
				  <button type="button" onclick="VISH.Editor.getValueFromFancybox('picture_url')">Done</button>
				</div>
				<div id='tab_pic_upload_content' class="fancy_tab_content">
				  Select picture to upload
				  <input id="upload_input" type="text" size="25" value="">
				  <button type="button" onclick="alert('Uploaded!')">Upload</button>
				</div>
				<div id='tab_pic_repo_content' class="fancy_tab_content">
				  Vish repository	
				</div>
				<div id='tab_pic_flikr_content' class="fancy_tab_content">
				  Search in flikr
				  <input id="flikr_input" type="text" size="25" value="">
				  <button type="button" onclick="alert('search!')">Search</button>
			  </div>
	    </div>
	  </div>
  
  
  	  <!-- FLASH -->
	  <div style='display:none'>
	    <div id="flash_fancybox" class="outer_box">
				<div class="fancy_tabs">	   
				  <ul>
				    <li><a href="#" onclick="VISH.Editor.loadTab('tab_flash_from_url')" id="tab_flash_from_url" class="fancy_tab">EMBED</a></li>
				    <li><a href="#" onclick="VISH.Editor.loadTab('tab_flash_upload')" id="tab_flash_upload" class="fancy_tab">UPLOAD</a></li>
				    <li><a href="#" onclick="VISH.Editor.loadTab('tab_flash_repo')" id="tab_flash_repo" class="fancy_tab">VISH</a></li>
				  </ul>
				</div>
				<div id='tab_flash_from_url_content' class="fancy_tab_content">
				  Paste flash embed code
				  <input id="flash_embed_code" type="text" size="25" value="">
				  <button type="button" onclick="VISH.Editor.getValueFromFancybox('flash_embed_code')">Done</button>
				</div>
				<div id='tab_flash_upload_content' class="fancy_tab_content">
				  Select flash to upload
				  <input id="upload_flash_input" type="text" size="25" value="">
				  <button type="button" onclick="alert('Uploaded!')">Upload</button>
				</div>
				<div id='tab_flash_repo_content' class="fancy_tab_content">
				  Vish repository	    
				</div>
	    </div>
	  </div>
  
  
  	  <!-- VIDEO -->
	  <div style='display:none'>
	    <div id="video_fancybox" class="outer_box">
				<div class="fancy_tabs">	   
				    <ul>
				      <li><a href="#" onclick="VISH.Editor.loadTab('tab_video_from_url')" id="tab_video_from_url" class="fancy_tab">URL</a></li>
				      <li><a href="#" onclick="VISH.Editor.loadTab('tab_video_upload')" id="tab_video_upload" class="fancy_tab">UPLOAD</a></li>
				      <li><a href="#" onclick="VISH.Editor.loadTab('tab_video_repo')" id="tab_video_repo" class="fancy_tab">VISH</a></li>
				      <li><a href="#" onclick="VISH.Editor.loadTab('tab_video_youtube')" id="tab_video_youtube" class="fancy_tab">YOUTUBE</a></li>
				    </ul>
				</div>
				<div id='tab_video_from_url_content' class="fancy_tab_content">
				  <input id="url_video_input" type="text" class="rounded vishtab url">
					<button type="button" class="okButton" onclick="VISH.Editor.getValueFromFancybox('video_url')"> Add</button>
				</div>
				<div id='tab_video_upload_content' class="fancy_tab_content">
					<input id="upload_video_input" type="text" class="rounded vishtab upload">
          <button type="button" class="okButton" onclick="alert('Uploaded!')"> Upload</button>
				</div>
				<div id='tab_video_repo_content' class="fancy_tab_content">
				  
					<div class="search_container">
					  <input type="search" class="rounded vishtab"> </input>
					</div>
					
					<div id="tab_video_repo_content_carrousel"></div>
					<div id="tab_video_repo_content_preview">
						<div id="tab_video_repo_content_preview_video">
							
						</div>
						<div id="tab_video_repo_content_preview_metadata"></div>
						<div id="tab_video_repo_content_preview_foot">
							<button type="button" class="okButton" onclick="VISH.Editor.Video.Repository.addSelectedVideo()">Add</button>
						</div>
					</div>
				</div>  
				
				<div id='tab_video_youtube_content' class="fancy_tab_content">
				  <input id="youtube_input_text" type="text" size="25" value="" autofocus placeholder="write text to search"/>
				  <button id="youtube_search_button" type="button" class="okButton" onclick="VISH.Editor.Video.Youtube.listVideo('youtube_input_text')">Search</button>
					<!-- Add carrousel -->
					<div id="tab_video_youtube_content_carrousel"></div>
				</div>
	    </div>
	  </div>


<script>	
	//first function called when page loads
	function start(){
		VISH.Editor.init({"token":"<%= form_authenticity_token %>", "postPath": "<%= excursions_path %>" });
	}	
</script>