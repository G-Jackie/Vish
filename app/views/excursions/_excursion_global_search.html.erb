<div class="model_with_details span3 box-result">
  <ul class="thumbnails">
    <li class="span1 margin-clear">
      <%= link_to  thumb_for(excursion, 130), excursion, :class => "container" %>
      <div class='number_pages'><%= excursion.slide_count %></div>
    </li>
    <li class="span2">
      <div class="caption ">
        <h4><%= link_to truncate_name(excursion.title, :length => 40), excursion %></h4>
        <h5><%=t('follow.followers')%>: <span class="dark-gray"><%=num_followers%></span></h5>
        <p><%= image_tag('star.png') %></p>
      </div>
    </li>
  </ul>
</div>


