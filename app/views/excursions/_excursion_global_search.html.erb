<div class="model_with_details span3 box-result">
  <ul class="thumbnails">
    <li class="span1 margin-clear">
      <%= link_to  thumb_for(excursion, 130), excursion, :class => "container" %>
      <div class='number_pages'><%= excursion.slide_count %></div>
    </li>
    <li class="span2">
      <div class="caption ">
        <h5><span class="size14"><%= link_to truncate_name(excursion.title, :length => 30), excursion %></span></h5>
        <h5 class="blue-opacity"><span class="size12"><%=t "#{excursion.class.name.underscore}.one"  %></span></h5>
        <h5 class="blue-opacity"><span class="size11">by <%=link_to( truncate_name(excursion.author.name, :length => 20), excursion.author.subject)%></span></h5>
        <h5><%=excursion.visit_count.to_s%> views </h5>
        <p><%= image_tag('star.png') %></p>
      </div>
    </li>
  </ul>
</div>


