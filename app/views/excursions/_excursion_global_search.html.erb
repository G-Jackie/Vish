<div class="model_with_details span3 box-result">
  <ul class="thumbnails">
    <li class="span1 margin-clear">
      <%= link_to  excursion_thumb_for(excursion, 130), excursion, :class => "container" %>
      <div class='number_pages'><%= excursion.slide_count %></div>
    </li>
    <li class="span2">
      <div class="caption ">
        <h5><span class="size14"><%= link_to truncate_name(excursion.title, :length => 25), excursion %></span></h5>
        <h5 class="blue-opacity"><span class="size12"><%=t "#{excursion.class.name.underscore}.one"  %></span></h5>
        <h5 class="blue-opacity"><span class="size11">by <a data-toggle="modal" href="#user-modal-<%=excursion.author.slug %>" class="user-modal-button-<%=excursion.author.slug %>"><%= truncate_name(excursion.author.name, :length => 20)%></a></span></h5>
        <h5>
          <span class="green"><%=excursion.visit_count.to_s%></span> <%= t("follow.views") %> / <span class="green like_count_<%= dom_id(excursion.activities.first) %>"><%=excursion.activities.first.likes.count.to_s%></span>
          <div class="verb_like" id="like_<%= dom_id(excursion.activities.first) %>"><%= link_like(excursion.activities.first)%></div>
        </h5>
      </div>
    </li>
  </ul>
</div>

