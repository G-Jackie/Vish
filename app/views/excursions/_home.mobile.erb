<% unless excursion.blank? %>

  <article class="">
    <div class="row-fluid">
      <div class="span12">
        <div class="box_basic margin-bottom5">
          <div class="thumbnails">
            <div class="span3 inline">
              <%= link_to excursion_thumb_for(excursion, 130), excursion %>
            </div>
            <div class="span9 inline-block">
              <div id="excursion-mobile-carousel-<%= excursion.id %>" class="carousel slide" data-interval="false">
                <div class="carousel-inner">
                  <div class="active item">
                    <div class="caption">
                      <div class="span11 margin-top5 margin-left10 ellipsis size22">
                        <%= link_to excursion.title, excursion %>
                      </div>
                      <div class="">

                      <%= link_to(raw("<i class='iconnav-notification'></i> "), :class => "btn pull-right") %>
                       </div>
                      <div class="span11 margin-left10 blue-opacity ellipsis size20">by <%= link_to excursion.author.name, excursion.author.user %>
                      </div>


                    </div>
                    <div class="span">

                      <div class="pull-right">
                        <h3>
                          <span class="green inline"><%= excursion.post_activity.likes.count.to_s %></span><img src="/assets/star-MENU-active.png" width="12" height="12">&nbsp;&nbsp;<span class="green inline-block"><%= excursion.post_activity.comments.count.to_s %>
                          <img src="/assets/icon-message.png" width="16" height="12"></a></span>
                        </h3>
                      </div>
                    </div>
                  </div>
                  <div class="item">
                    <h2 class="span8"><span class="green"><%= excursion.visit_count %></span> <%= t('follow.views') %>
                    </h2>

                    <h3 class="span8 blue-opacity article ellipsis w400px">
                      <% excursion.tags.each do |t| %>
                        <a href="#"><%= t.to_s %></a>,
                      <% end %>
                    </h3>
                  </div>
                  <% unless excursion.description.blank? %>
                    <div class="item">
                      <p class="size15">
                        <%= truncate excursion.description, :length => 90 %>
                      </p>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </article>

<% end %>

