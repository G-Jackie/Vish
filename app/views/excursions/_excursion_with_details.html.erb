<div id="item-search-bar">
  <div class="thumbnails">
    <div class="img">
      <%= link_to  excursion_thumb_for(excursion, 50), excursion, :class => "" %>
    </div>
    <div class="info">
      <div class="title">
        <%= link_to truncate_name(excursion.title, :length => 30), excursion %>
      </div>
      <% unless excursion.draft %>
      <div class="by excursion">
        <%=t "#{excursion.class.name.underscore}.one" %>
      </div>   
      <div class="autor">by 
        <%=link_to( truncate_name(excursion.author.name, :length => 20), excursion.author.subject)%>
      </div>
    <% end %>

    </div>
  </div>
</div>



