<div class="excursions tabbable span12">
  <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#ex-1"><%= @excursion.title %></a></li>
  </ul>
  <div class="tab-content">
    <div id="ex-1" class="tab-pane active">
      <p id="notice"><%= notice %></p>
      <h4><%= @excursion.description %></h4>
      <% unless @excursion.author.blank? %>
        <div class="pull-right space_right">
          <h4><%=link_to( t('author')+': '+truncate_name(@excursion.author.name, :length => 20), @excursion.author.subject)%></h4>
        </div>
      <% end %>
      <div class="space_center"></div>
      <div class="space_center"></div>
      <div class="pagination-centered">
        <iframe id="excursion_iframe" src="<%=excursion_path(@excursion, :format => :full)%>" width="900" height="680" style="border:0" iframeborder="0" iframeElement.frameBorder = 0;></iframe>
      </div>


      <% content_for :javascript do %>
        location.href = "#excursion_iframe";
      <%end%>

      <% if user_signed_in? %>

         <div class="excursion_tools">
          <div class="span7 options ">
            <div> clone </div>
            <div> mail </div>
            <div> embebed </div>
            <div> span </div>
            <div> share </div>
            <% if user_signed_in? and @excursion.post_activity.edit_object_by?(current_subject) %>
              <%= link_to 'Edit', edit_excursion_path(@excursion) %>
            <%end%>
            <% if user_signed_in? and  @excursion.post_activity.delete_object_by?(current_subject) %>
              <%= link_to content_tag(:span, t('excursion.actions.delete'), :class => :action), @excursion.post_activity.direct_object , :confirm => t('confirm_delete',                                                                                                                                                 :scope => @excursion.post_activity.direct_object.class.to_s.underscore), :method => :delete %>
            <% end %>

          </div>
          <div class="span1 quiz ">
              quiz icon
          </div>
           <div class="span2 quiz ">
             <h5><span class="green"><%=@excursion.visit_count.to_s%></span> <%=t('follow.views')%></h5>
           </div>

          <div class="span1 stairs_excursion  pagination-right">
            <%= image_tag('rate-excursion.png', :width => '100') %>
          </div>
         </div>

      <%end%>
      </div>
    </div>
</div>

<div class="row">
  <div class="span12">
    <div class="space_center"></div>
    <div id="left" class="tabbable span8 ">
      <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#comment-1"><%= t('comment.title.other') %></a></li>
      </ul>
      <div class="tab-content">
        <div id="comment-1" class="tab-pane active row-fluid activity_content">
        <% unless @excursion.post_activity.blank? %>
          <%= render :partial => 'activities/comments', :locals => { :activity =>  @excursion.post_activity, :logo_size => ':contact' } %>
          <%= render :partial => 'comments/new', :locals => { :activity =>  @excursion.post_activity  } %>
        <% else %>
          <% if user_signed_in? %>
            <%= render :partial => 'comments/new', :locals => { :activity =>  @excursion.post_activity } %>
          <%else%>
            <%= link_to(t('session.session_start'),new_user_registration_path) + " " + t('disyuntion.or') + " " + link_to(t('sign_up').downcase, new_user_registration_path) + " " +  t('comment.msg') %>
          <%end%>
         <%end%>
        </div>
      </div>
    </div>

    <div class="span3 space_left">
      <!--
      <div class="tabbable">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#organizer-1"><%#= t('organizer.other') %></a></li>
        </ul>
        <div class="tab-content">
          <div id="organizer-1" class="tab-pane active">

          </div>
        </div>
      </div>
      -->

      <% if user_signed_in? %>
        <%= render :partial => "contacts/suggestions" %>
      <% end %>
    </div>

  </div>
</div>
