    <div class="box_description">
      <h2><%= @excursion.title %></h2>
      <!--author-->
      <div class="toggler">
      <%= render :partial => 'excursions/items-owner-profile', :locals => { :shortURL => shortURL} %>
      <!--description-->
      <%= render :partial => 'excursions/excursion-info' %>
    </div>
    </div>
    
