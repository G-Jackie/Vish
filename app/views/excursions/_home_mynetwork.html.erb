<section id="excursions_tab_ready4 " class="excursions">
  <ul class="">
    <%= render partial: 'excursions/excursion-add' %>   
  	<% excursions = subject_excursions(profile_or_current_subject, {:scope => scope, :limit => 0, :page=> params[:page] || page, :sort_by=> params[:sort_by]||sort_by||"popularity"}) %>
  
  	<% excursions.each do |excursion| %>
    <%= render :partial => 'excursions/excursion', :locals => { :excursion => excursion } %>
  <% end %> 

  </ul>
  <div id="last_content_shown" style="display:none"><%=t('search.end')%></div>

</section>

<script>
	$(document).ready(function(){		
			update_pageless_state("networking", <%=excursions.num_pages%>, <%=excursions.current_page%>);

			re_apply_pageless("networking");		

		$("footer#footer").addClass("fixed-bottom");	    
	});

</script>

