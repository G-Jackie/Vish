<%= div_for excursion, :class => 'content_size' do %>
  <div class="excursion_link excursion_thumbnail_show">
      <%= link_to thumb_for(excursion, 130), excursion, :class => "container" %>
      <div class='number_pages'><%= excursion.slide_count %></div>
  </div>
  <div class="attachment_text">
    <div class="title bold dark-gray">
      <%= excursion.title %>
    </div>

    <%= simple_format auto_link(excursion.description) %>

    <%= link_to t('details.msg'), excursion, :class => "attachment_text_link" %>
  </div>
<% end %>

