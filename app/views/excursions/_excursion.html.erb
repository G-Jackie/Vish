<!--time line-->

<div class="clearfloat"></div>
<%= div_for excursion, :class => 'timeline-excursion' do %>
  <div class="item-excursion-wall">
    <ul class="thumbnails">
      <li class="img-excursion">
      <%= link_to excursion_thumb_for(excursion, 130), excursion, :class => "container" %>
      <div class='number_pages'>
        <%= excursion.slide_count %>
      </div>
      </li>
      <li class="info-excursion-timeline">
        <div class="title-excursion">
          <%= link_to excursion.title, excursion %>
        </div>
        <p><%= simple_format auto_link(excursion.description) %></p>
        <p class="details"><%= link_to t('details.msg'), excursion, :class => "" %></p>
      </li>
    </ul>
  </div>
<% end %>

