<div class="model_with_details span3 box-result">
  <%= javascript_tag do %>
Â    <%= modal_for(excursion.author.subject) %>
  <% end %>
  <ul class="thumbnails">
    <li class="span1 margin-clear">
      <%= link_to  excursion_thumb_for(excursion, 130), excursion, :class => "container" %>
      <div class='number_pages'><%= excursion.slide_count %></div>
    </li>
    <li class="span w150px">
      <div class="caption ">
        <h5><span class="size14"><%= link_to truncate_name(excursion.title, :length => 25), excursion %></span></h5>
        <h5 class="blue-opacity"><span class="size11">by <a data-toggle="modal" href="#user-modal-<%=excursion.author.slug %>" class="user-modal-button-<%=excursion.author.slug %> modal-no-trigger"><%= truncate_name(excursion.author.name, :length => 20)%></a></span></h5>
        <% unless excursion.draft %>
          <h5>
            <span class="green"><%=excursion.visit_count.to_s%></span> <%= t("follow.views") %> / <span class="green like_count_<%= dom_id(excursion.post_activity) %>"><%=excursion.post_activity.likes.count.to_s%></span>
            <div class="verb_like" id="like_<%= dom_id(excursion.post_activity) %>"><%= link_like(excursion.post_activity)%></div>
          </h5>
        <% end %>
        <% unless excursion.tag_list.blank? %>
          <ul class="tagit-suggestions nomargin single-line-tags">
            <% excursion.tag_list.shuffle.each do |tag| %>
              <li class="tagit-choice"><%= link_to tag, search_path(:q => tag) %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </li>
  </ul>
</div>

