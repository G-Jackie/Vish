<%= div_for scormfile, :class => 'content_size' do %>
  <div class="scormpackage_show">
    <p>Show SCORM package: <%=scormfile.title%></p>
    <iframe width=<%=scormfile.width%> height="<%=scormfile.height%>" class="scormpackage_wrapper" style="border: none" src="<%=scormfile_path(scormfile, :format => :full)%>"></iframe>
    <p><a href="<%=scormfile.zipurl%>">Download</a></p>
    <p><a href="<%=scormfile_path(scormfile, :format => :full)%>" target="_blank">View full</a></p>
  </div>
<% end %>