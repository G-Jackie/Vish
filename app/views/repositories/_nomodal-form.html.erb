<div id="AddResources" class="">
  <div class="">
    <div class="">
      <div class="modal-header">
        <%= render partial: 'help/help_resource_new' %>
        <h4><%= t('document.main_title')%></h4>
      </div>
      <div class="modal-body">


        <div class="layoutform">
          <!-- Tags preloaded -->
          <%@tags = ActivityObject.tag_counts(:limit => 100, :order => "count desc")%>
          <ul id="resourcePreloadTagList" style="display:none">
            <%@tags.each do |tag| %>
              <li><%=tag.name%></li>
            <%end%>
          </ul>

          <p><%= t('document.body.title1')%></p>

          <div class="panel-group">
            <div class="panel panel-default" id="accordion1-upload">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1-upload" href="#document-upload">
                    <i class="fa fa-folder-open"></i> <%= t('document.options.documents')%>
                  </a>
                </h4>
              </div>
              <div id="document-upload" class="panel collapse">
                <div class="panel-body">
                  <% d = Document.new %>
                  <% d.owner_id = Actor.normalize_id(current_subject) %>
                  <%= form_for d, :class= => "form-group", :namespace => 'new_file_only', :html => { :multipart => true }, :remote => false do |f| %>
                    <%= f.hidden_field :owner_id %>
                    <%= f.file_field :file %>
                    <%= f.hidden_field :title%>
                    <%= f.hidden_field :description%>
                    <%= f.hidden_field :tag_list, :multiple => true %>
                    <%= f.hidden_field :language, :value => "" %>
                    <%= f.hidden_field :age_min, :value => "4" %>
                    <%= f.hidden_field :age_max, :value => "20" %>
                    <%= f.submit t('button.save'), :class => "document hide"%>
                  <% end %>
                </div>
              </div>
            </div>


            <div class="panel panel-default" id="accordion2-upload">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2-upload" href="#link-upload">
                    <i class="fa fa-link"></i> <%= t('document.options.links')%>
                  </a>
                </h4>
              </div>
              <div id="link-upload" class="panel collapse">
                <div class="panel-body">

                  <% d = Link.new %>
                  <% d.owner_id = Actor.normalize_id(current_subject) %>
                  <%= form_for d, :namespace => 'new_file_only', :html => { :multipart => true }, :remote => false do |f| %>
                    <%= f.hidden_field :owner_id %>
                    <%= f.hidden_field :callback_url %>
                    <%= f.hidden_field :loaded %>
                    <%= f.text_field :url %>
                    <%= f.hidden_field :title%>
                    <%= f.hidden_field :description%>
                    <%= f.hidden_field :tag_list, :multiple => true %>
                    <%= f.hidden_field :language, :value => "" %>
                    <%= f.hidden_field :age_min, :value => "4" %>
                    <%= f.hidden_field :age_max, :value => "20" %>
                    <%= f.submit t('button.save'), :class => "link hide"%>
                  <% end %>
                </div>
              </div>
            </div>
            <div class="panel panel-default" id="accordion3-upload">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion3-upload" href="#embed-upload">
                    <i class="fa fa-code"></i> <%= t('document.options.embed') %>
                  </a>
                </h4>
              </div>
              <div id="embed-upload" class="panel collapse">
                <div class="panel-body">
                  <% d = Embed.new %>
                  <% d.owner_id = Actor.normalize_id(current_subject) %>
                  <%= form_for d, :namespace => 'new_file_only', :html => { :multipart => true }, :remote => false do |f| %>
                    <%= f.hidden_field :owner_id %>
                    <%= f.text_field :fulltext %>
                    <%= f.hidden_field :title%>
                    <%= f.hidden_field :description%>
                    <%= f.hidden_field :tag_list, :multiple => true %>
                    <%= f.hidden_field :language, :value => "" %>
                    <%= f.hidden_field :age_min, :value => "4" %>
                    <%= f.hidden_field :age_max, :value => "20" %>
                    <%= f.submit t('button.save'), :class => "embed hide"%>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <br>
        </div>

        <div class="form-group layoutform">
          <p><%= t('document.body.title2')%></p>

          <!--TITULO-->
          <label><%= t('document.leyend.title')%></label>
          <input type="text" class="form-control title" placeholder="<%= t('document.title_input')%>">

          <!--DESCRIPCION-->
          <label><%= t('document.leyend.description')%></label>
          <textarea type="text" class="form-control description" placeholder="<%= t('document.input')%>"></textarea>

          <!--TAGS-->
          <label><%= t('document.leyend.tags')%></label>

          <div class="tagBoxDocument">
             <ul class="resourceTagList"></ul>

          </div>

          <div class="clearfloat"></div>

          <!--Avatar-->
          <label class="new_file_avatar_label"><%= t('document.leyend.avatar')%></label>
          <input class="new_file_avatar" type="file" accept="image/*">
          <!--
              <div class="input-group">
                <span class="input-group-btn">
                    <span class="btn btn-default btn-file">
                        Browseâ€¦ <input class="new_file_avatar" type="file" accept="image/*">
                    </span>
                </span>
                <input type="text" class="form-control" readonly="">
            </div>
          -->
          <!--LANGUAGE-->
          <label><%= t('document.leyend.language')%></label>
          <%= select_tag(:language, resource_language_options_for_select(d.language), :class => "language") %>

          <!--AGE SLIDER-->
          <label><%= t('document.leyend.recommended_age')%></label>
          <div class="limits">
            <div class="limit1">4</div>
            <div class="limit2">20</div>
          </div>
          <input type="text" class="age-slider" value="" data-slider-min="0" data-slider-max="30" data-slider-step="1" data-slider-value="[4,20]" data-slider-orientation="horizontal" data-slider-tooltip="hide"/>

          <br>
        </div>
      </div>
      <!-- FOOTER -->
      <div class="modal-footer">

        <input type="button" class="btn btn-primary" data-loading-text="<%= t('document.uploading')%>" value="<%= t('document.upload')%>"/>
      </div>
    </div>
  </div>
</div>
<script>

  $(document).ready(function(){
    $('.helpResources').popover({
      html : true,
      content: function() {
        return $('.contentHelpResources').html();
      }
    });
  });


  $("#AddResources").on('shown.bs.modal', function(){
    //SLIDER
    var min = 0;
    var max = 30;
    var step = 1;
    var diff = max - min;

    var positionLimits = function(){
      var value1 = $('#AddResources .age-slider').data('slider').getValue()[0];
      var value2 = $('#AddResources .age-slider').data('slider').getValue()[1];
      $('#AddResources .limit1').text(value1);
      $('#AddResources .limit2').text(value2);

      var percentage =[
        (value1-min)*100/diff,
        (value2-min)*100/diff,
        step*100/diff
      ];

      $("#AddResources .limit1").css("left", function(ev) {
        return $('#AddResources .slider').width() * percentage[0]/100 - $("#AddResources .limit1").width()/2 + 'px';
      });
      $("#AddResources .limit2").css("left", function(ev) {
        return $('#AddResources .slider').width() * percentage[1]/100 - $("#AddResources .limit2").width()/2 + 'px';
      });
    };

    $("#AddResources .age-slider").slider().on('slide', function(ev){
      positionLimits();
    });

    $("#AddResources .age-slider").before($("#AddResources .limits"));
    positionLimits();
  });


  //COMMON FIELDS
  var uploadButton = $("#AddResources input[value=<%= t('document.upload')%>][type='button'][class='btn btn-primary']");

  $(uploadButton).click(function(event){
     var resource_type = $("#AddResources .panel.collapse.in").attr('id');

    if(resource_type == "document" && $("#AddResources input[name='"+resource_type+"[file]']").val() == ""){
      alert("<%= t('document.body.title3')%>");
    } else if (resource_type == "link" && $("#AddResources input[name='"+resource_type+"[url]']").val() == ""){
      alert("<%= t('link.title3')%>");
    } else if (resource_type == "embed" && $("#AddResources input[name='"+resource_type+"[fulltext]']").val() == "") {
      alert("<%= t('embed.title3')%>");
    } else if($(".title").val() == "") {
      alert("<%= t('document.title_alert')%>");
    } else {
      //TITLE
      $("#AddResources input[name='"+resource_type+"[title]']").val($(".title").val());
      //DESCRIPTION
      $("#AddResources input[name='"+resource_type+"[description]']").val($(".description").val());
      //TAGS
      var tagList = $("#AddResources .resourceTagList");
      $("#AddResources input[name='"+resource_type+"[tag_list][]']").val(Vish.Utils.convertToTagsArray($(tagList).tagit("tags")));
      //Avatar
      var avatarFileInput = $("#AddResources .new_file_avatar");
      $(avatarFileInput).attr("name",resource_type+"[avatar]");
      var myForm = $("#AddResources form#new_file_only_new_" + resource_type);
      $(avatarFileInput).css("display","none");
      $(avatarFileInput).appendTo(myForm);
      //LANGUAGE
      $("#AddResources input[name='"+resource_type+"[language]']").val($(".language").val());
      //AGE
      var value1 = $('#AddResources .age-slider').data('slider').getValue()[0];
      var value2 = $('#AddResources .age-slider').data('slider').getValue()[1];
      $('#AddResources input[name="'+resource_type+'[age_min]"]').val(value1);
      $('#AddResources input[name="'+resource_type+'[age_max]"]').val(value2);

      $(this).button('loading');
      //SUBMIT

      $("#AddResources input[value=<%= t('button.save') %>][type='submit'][name='commit'][class='"+resource_type+" hide']").click();
    }
  });

  //Tags
  var resourceTagList = $("#AddResources .resourceTagList");
  var resourceTags = [];

  //Load tags
  $.each($("#AddResources #resourcePreloadTagList li"), function(index, element) {
     resourceTags.push($(element).html());
  });

  if ($(resourceTagList).children().length == 0){
    $(resourceTagList).tagit({tagSource:resourceTags, sortable:true, maxLength:15, maxTags:8 ,
      watermarkAllowMessage: '<%=t('document.tags.addMessage')%>', watermarkDenyMessage: '<%=t('document.tags.limitMessage')%>' });
  }

  //File chooser listener
  $("#AddResources #new_file_only_document_file").on('change', function(e){
    try{
      var ext = $(this).val().split(".").pop().toLowerCase();
      var imageFormats = ["jpg","jpeg","png","gif","bmp","svg"];
      if(imageFormats.indexOf(ext)!=-1){
        //Its a image
        enableUploadAvatar(false);
      } else {
        enableUploadAvatar(true);
      }
    } catch(e){
      enableUploadAvatar(true);
    }
  });

  var enableUploadAvatar = function(enable){
    var label = $("#AddResources label.new_file_avatar_label");
    var input = $("#AddResources input.new_file_avatar");
    $(input).prop('disabled', !enable);

    if(enable===true){
      $(label).removeClass("disabled");
      $(label).show();
      $(input).show();
    }else{
      $(label).addClass("disabled");
      $(label).hide();
      $(input).hide();
    }
  };

</script>
