<%= div_for officedoc, :class => 'row-fluid' do %>
  <%= javascript_tag do %>
    <%= modal_for(officedoc) %>
  <% end %>
  <ul class="thumbnails">
    <li class="span3">
      <a data-toggle="modal" href="#officedoc-modal-<%= officedoc.id.to_s%>" class="officedoc-modal-button-<%= officedoc.id.to_s%> modal-trigger"><i class='icon75-pdf'  onclick = "redim(); googdoc(); redimensiona();"></i></a>
    </li>
    <li class="span9">
      <div class="title">
        <h4 class="bold ellipsis w190px">
          <a data-toggle="modal" href="#officedoc-modal-<%= officedoc.id.to_s%>" onclick = "redim(); googdoc(); redimensiona();" class="officedoc-modal-button-<%= officedoc.id.to_s%> modal-trigger"><%= officedoc.title %></a>
        </h4>
      </div>
      <p><%= simple_format officedoc.description %></p>
      <p><%= link_to t('details.msg'), officedoc, :class => "attachment_text_link" %></p>
    </li>
  </ul>
<% end %>

<div class="clearfloat"></div>

<%= javascript_tag do %>
    function redim() {
      return -($(this).width() / 2);
    }
    $('.resize').css({
        width: 'auto',
        'margin-left': redim()
    });
<% end %>

