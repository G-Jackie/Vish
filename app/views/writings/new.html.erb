                <%= f.hidden_field :language, :value => "" %>
                <%= f.hidden_field :age_min, :value => "4" %>
                <%= f.hidden_field :age_max, :value => "20" %>
                <%= f.submit t('button.save'), :class => "writing hide"%>
              <% end %>
            </div>
          </div>


          <%= render :partial => "shared/resource_common_fields", :locals => {:d=> d} %>

