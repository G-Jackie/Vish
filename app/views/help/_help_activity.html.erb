<li class="helpheader">   
<i class="icon-question-sign helphome" data-placement='left' aria-hidden="true" data-original-title="<%=t('document.help.activity1_html')%>" href='#' value="" ></i>
<div class="contenthome" style="display: none">
  <div>
    <%= t('document.help.activity2_html')%>
  </div>
</div>
</li>
<script>
$(document).ready(function(){
  $('.helphome').popover({ 
    html : true,
    content: function() {
      return $('.contenthome').html();
    }
  });
});
</script>

<script>
$('body').on('click', function (e) {
    $('.helphome').each(function () {
        //the 'is' for buttons that trigger popups
        //the 'has' for icons within a button that triggers a popup
        if (!$(this).is(e.target) && $(this).has(e.target).length === 0 && $('.popover').has(e.target).length === 0) {
            $(this).popover('hide');
        }
    });
});
</script>