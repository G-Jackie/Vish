<li class="helpheader_modal">   
<i class="icon-question-sign hostias" data-placement='bottom' aria-hidden="true" data-original-title="<%= t('categories.actions.verb')%>" href='#' value="" ></i>
<div class="salmon" style="display: none">
  <div>
  <%= t('document.help.categorize_html')%>
  </div>
  <div class="modal-footer popoverfix"><%= t('document.help.overview_html')%></div>
</div>
</li>
<script>
$(document).ready(function(){
  $('.hostias').popover({ 
    html : true,
    content: function() {
      return $('.salmon').html();
    }
  });
});
</script>

<script>
$('body').on('click', function (e) {
    $('.hostias').each(function () {
        //the 'is' for buttons that trigger popups
        //the 'has' for icons within a button that triggers a popup
        if (!$(this).is(e.target) && $(this).has(e.target).length === 0 && $('.popover').has(e.target).length === 0) {
            $(this).popover('hide');
        }
    });
});
</script>