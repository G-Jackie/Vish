<span class="helpheader">   
  <i class="fa fa-question-circle helpCategorize" data-placement='left' aria-hidden="true" data-original-title="<%= t('categories.actions.verb')%>" href='#' value="" ></i>
  <div class="contenthelpCategorize" style="display: none">
    <div class="popover-body">
      <p> <%= t('document.help.categorize_html')%> </p>
    </div>
    <div class="popover-footer popoverfix"><%= t('document.help.overview_html')%></div>
  </div>
</span>
<script>
$(document).ready(function(){
  $('.helpCategorize').popover({ 
    html : true,
    content: function() {
      return $('.contenthelpCategorize').html();
    }
  });
});
</script>

<script>
$('body').on('click', function (e) {
    $('.helpCategorize').each(function () {
        //the 'is' for buttons that trigger popups
        //the 'has' for icons within a button that triggers a popup
        if (!$(this).is(e.target) && $(this).has(e.target).length === 0 && $('.popover').has(e.target).length === 0) {
            $(this).popover('hide');
        }
    });
});
</script>