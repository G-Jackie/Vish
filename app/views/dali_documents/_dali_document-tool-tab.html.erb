<script>
  var delete_function = function(dali_id){
    if(confirm("<%=t('dali_document.actions.delete_alert')%>")){
      $.ajax({
                url: '/dali_documents/' + dali_id + '/delete' ,
                type: 'POST',
                dataType: "json",
                success: function(data){
                    window.location.replace("<%= user_path(current_subject) %>");
                },
                 error: function(){
                }
          });
    }
  };
</script>

<!--BTN ACTIONS-->
<div class="btn-group actions_layout_show">
<% editingToolbar = false %>

  <!-- Edit -->
  <% if user_signed_in? and !editingToolbar and (can? :update, @dali_document) %>
    <button class="btn btn-default" data-toggle="tooltip" title="<%=t('dali_document.actions.edit')%>" onclick="location.href='<%=edit_dali_document_path(@dali_document)%>'">
      <i class="fa fa-edit"></i>
    </button>
  <%end%>
 
  <!--Remove-->
  <% if user_signed_in? and can?(:destroy, @dali_document) %>
    <button class="with_tooltip delete btn btn-default" data-toggle="popover" data-container="body" title="<%=t('dali_document.actions.delete')%>" data-placement="left" aria-hidden="true" onclick="delete_function(<%=@dali_document.id%>)">
      <i class="fa fa-trash-o"></i>
    </button>
  <%end%>

  <div class="contentdelete" style="display: none">
    <p class="delete_p"><i class="fa fa-trash-o"></i>  <%=t('dali_document.confirm_delete')%></p>
    <div class="actions">
      <a class="btn btn-default btn_cancel closepopover"><%=t('cancel')%></a>
      <%= link_to t('dali_document.actions.delete'),  @dali_document, :method => :delete, :class => 'btn btn-primary' %>
    </div>
  </div>

  <!--favorite-->
  <% unless editingToolbar %>
    <% unless @dali_document.post_activity.nil? %>
      <%= link_like(@dali_document.post_activity, {:size => :big, :class=>'btn', :title =>t('dali_document.actions.favorite')})%>
    <%end%>

    <!--Evaluate-->
    <%unless Vish::Application.config.APP_CONFIG['loep'].nil?%>
      <button onclick="triggerEvaluation()" class="btn" data-toggle="tooltip" title="<%=t('evaluation.verb')%>">
        <i class="fa fa-check-square"></i>
      </button>
    <%end%>


  <%end%>
</div>

<% unless editingToolbar %>
  <!--TABS-->
  <ul class="nav nav-tabs tooltab">
    <li class="active">
      <a href="#tab0" tabTitle='description' data-toggle="tab">
        <i class="fa fa-align-left"></i>
        <span class="  hidden-xs">
          <%=t('dali_document.description')%>
        </span>
      </a>
    </li>
    <li>
      <a href="#tab2" tabTitle='embed' data-toggle="tab">
        <i class="fa fa-code"></i>
        <span class="  hidden-xs">
          <%=t('dali_document.actions.embed') %>
        </span>
      </a>
    </li>
    <li>
      <a href="#tab3" tabTitle='share' data-toggle="tab">
        <i class="fa fa-share"></i>
        <span class=" hidden-xs">
          <%=t('dali_document.actions.share')%>
        </span>
      </a>
    </li>
    <% if false %>
      <li>
        <a href="#tab4" tabTitle='download' data-toggle="tab">
          <i class="fa fa-download"></i>
          <span class="hidden-xs">
            <%=t('document.actions.download')%>
          </span>
        </a>
      </li>
    <%end%>
    <li>
      <a href="#tab5" tabTitle='flag' data-toggle="tab">
        <i class="fa fa-flag"></i>
        <span class=" hidden-xs spam-name ">
          <%=t('excursion.actions.spam')%>
        </span>
      </a>
    </li>
    <%= render partial: 'help/help_show_excursion' %>
  </ul>


  <h1><%= @dali_document.title %></h1>

  <div class="tab-content dali_document-social">

    <!-- tab1 / description -->
    <div class="tab-pane active" id="tab0">
        <%= render :partial => 'dali_documents/dali_document_info' %>
    </div>

    <!-- tab2 / embed -->
    <div class="tab-pane contentembed" id="tab2">
      <div class="form-group">
        <div class="input-group">
        <textarea class="form-control" readonly="true" id="textarea_for_iframe" type="text">&lt;iframe id='presentation_iframe' src='//<%= request.env["HTTP_HOST"] + dali_document_path(@dali_document.id, :format => :full)%>' width='910' height='680' style='border:0' iframeborder='0' frameborder='0' iframeElement.frameBorder = 0; webkitallowfullscreen mozallowfullscreen allowfullscreen &gt;&lt;/iframe&gt</textarea>
                  <div class="input-group-addon"  >
            <div data-toggle="tooltip" data-placement="right" title="<%=t('copy_to_clip')%>">
              <button class="btn" id="btn_copy_embed"  >
               <i class="fa fa-copy "></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- tab3 / share -->
    <div class="tab-pane contentShare" id="tab3">
      <div class="form-group">
        <div class="input-group">
          <input class="form-control" readonly="true" id="input_with_shorturl" type="text" value="<%= request.env["HTTP_HOST"] + dali_document_path(@dali_document)%>"/>
          <div class="input-group-addon">
            <div data-toggle="tooltip" data-placement="right" title="<%=t('copy_to_clip')%>">
              <button class="btn" id="btn_copy_share" href="#" >
                <i class="fa fa-copy "></i>
              </button>
            </div>
          </div>
        </div>
      </div>
      <%= render :partial=>'shareon/share', :locals=>{:url=> request.env["HTTP_HOST"] + dali_document_path(@dali_document), :title => @dali_document.title, :name => (user_signed_in? ? current_subject.name : '')} %>
    </div>
    <%#TODO: GetUrl/Short Make sure helper work instead of request.env + dali_document_path%>
    <% if false %>
      <!-- tab4 / scorm -->
      <div class="tab-pane contentscorm" id="tab4">
        <div class="contentscormc1">
          <a class="btn btn-secundary" href='<%=excursion_path(@dali_document, :format => "scorm", :version => "12")%>'><i class="fa fa-download"></i> <%=t('dali_document.actions.scorm12')%></a>
          <a class="btn btn-secundary" href='<%=excursion_path(@dali_document, :format => "scorm", :version => "2004")%>'><i class="fa fa-download"></i> <%=t('dali_document.actions.scorm2004')%></a>
        </div>
        <div class="contentscormc2">
          <p><%=t("dali_document.download_scorm")%></p>
        </div>
      </div>
    <% end %>

    <!-- tab5 / spam -->
    <div class="tab-pane" id="tab5">
      <% @activity_object = @dali_document.activity_object %>
      <%= render '/spam_report/form' %>
    </div>
  </div>

<%end%>
