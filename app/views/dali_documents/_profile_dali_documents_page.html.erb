<% all_dali_documents = subject_dali_documents(profile_or_current_subject, {:scope => scope, :limit => 10, :page=> page, :sort_by=> "updated_at"}) %>
<% all_dali_documents.each do |dali_document| %>
    <%= render :partial => 'dali_documents/dali_document', :locals => { :dali_document => dali_document.object } %>
<% end %>

<script>
  <%if request.xhr?%>
    update_pageless_state("dali_documents", <%=all_dali_documents.num_pages%>, <%=all_dali_documents.current_page%>);
  <%else%>
    document.addEventListener("DOMContentLoaded", function(){
      update_pageless_state("dali_documents", <%=all_dali_documents.num_pages%>, <%=all_dali_documents.current_page%>);
    });
  <%end%>
</script>
