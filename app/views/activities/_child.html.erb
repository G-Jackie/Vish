<%= div_for activity, :class => "subactivity row-fluid boxy_white" do %>
  <ul class="thumbnails">
    <li class="span2 pagination-centered">
      <%= link_to image_tag(activity.sender_subject.logo.url(:actor),
                            :alt => activity.sender_subject.name, :class => "miniborder"),
                  activity.sender_subject %>
    </li>
    <li class="span10 activity_content">
      <div class="row-fluid-100">
        <span><%= link_to(activity.sender_subject.name, activity.sender_subject) %> <%= render activity.activity_objects %></span>
        <span>
          <%= render :partial => 'activities/options',
                       :locals => { :activity => activity } %>
        </span>
      </div>
    </li>
  </ul>
<% end %>
<div class="space_comments"></div>




