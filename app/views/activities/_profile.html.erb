<section id="wrapper_activities" class="tabbable" >
  <ul class="nav nav-tabs tabs-profile">
    <li class="">
      <a data-toggle="tab" href="#wall">
        <%= t('resource.net') %>
      </a>
    </li>
    <li class="active">
      <a data-toggle="tab" href="#wall-me">
        <%= t('resource.my') %>
      </a>
    </li>
  </ul>
  <div class="tittle-tabs">
    <%= t('activity.timeline')%>
  </div>
  <div class="tab-content" id="wrapper_activities_header">
    <%= render :partial => 'activities/new', :locals => { :receiver => owner } %>
  </div>
  <div class="tab-content">
  <%= render :partial => 'activities/wall',
             :locals  => { :activities => owner.wall(:home).page(params[:page_net]),
                           :is_active_wall => false } %>
  <%= render :partial => 'activities/wall_me',
             :locals  => { :activities => owner.wall(:profile, :for => owner). page(params[:page_me]),
                           :is_active_wall => true } %>
  </div>
</section>

