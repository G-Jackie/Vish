<article class="actions">
  <%= render :partial => 'activities/time_ago',
             :locals => { :activity => activity } %>   
  <hr class="decoration">
  <% if activity.direct_object.present? %>

    <%= render :partial => 'activities/comment',
               :locals => { :activity => activity } %>   

    <%= render :partial => 'activities/like',
               :locals => { :activity => activity } %>   

    <%= render :partial => 'activities/audience',
               :locals => { :activity => activity } %>   

  <% end %>

</article>
