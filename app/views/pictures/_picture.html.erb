<%= div_for picture, :class => 'row-fluid' do %>
  <ul class="thumbnails">
    <li class="span3">
      <%= link_to thumb_for(picture, 130),
                  picture,
                  :type => picture.type,
                  :title => picture.title,
                  :path => document_path(picture) %>
    </li>

    <li class="span9">
      <div class="title">
        <h4 class="bold"><%= truncate_name(picture.title, :length => 35) %></h4>
      </div>
      <p><%= simple_format auto_link(picture.description) %></p>
      <p><%= link_to t('details.msg'), picture, :class => "attachment_text_link" %></p>
    </li>
  </ul>
<% end %>

<div class="clearfloat"></div>
