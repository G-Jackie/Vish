<%= div_for picture, :class => 'row-fluid' do %>
  <%= javascript_tag do %>
 
    <%= modal_for(picture) %>
    function removeM(){

      var divs_tmp2 = $("div[id^='picture-modal-']");  //resize
      var divs_tmp1 = $("div[id^='picture-modal-body']");     //footar  
      var divs_tmp3 = $("div[id^='modyfooter']");           //sticky
      
          console.log(divs_tmp3); //sticky
          console.log(divs_tmp2); //resize
          console.log(divs_tmp1); //footar  

           divs_tmp1.removeClass('footar')
           divs_tmp2.removeClass('resize')
           divs_tmp3.removeClass('sticky')
         
    }
  <% end %>

  <ul class="thumbnails">
    <li class="span3">
      <a data-toggle="modal" href="#picture-modal-<%= picture.id.to_s%>" onclick="removeM();"  class="picture-modal-button-<%= picture.id.to_s%> modal-trigger"><%= thumb_for(picture, 75) %></a>
    </li>

    <li class="span9">
      <div class="title">
        <h4 class="bold ellipsis w190px">
          <a data-toggle="modal" href="#picture-modal-<%= picture.id.to_s%>" onclick="removeM();" class="picture-modal-button-<%= picture.id.to_s%> modal-trigger"><%= picture.title %></a>
        </h4>
      </div>
      <div class = vdescription>
      <p><%= simple_format (picture.description) %></p>
    </div>
      <p><%= link_to t('details.msg'), picture, :class => "attachment_text_link" %></p>
    </li>
  </ul>
<% end %>

<div class="clearfloat"></div>

