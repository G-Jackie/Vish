<% show_avatar ||= false%>
<%if !category.getAvatarUrl.nil? and !show_avatar%>
  
  <div class="img-box img-box-categorie" bs-img="<%=category.getAvatarUrl%>"></div>

<%elsif !category.getAvatarUrl.nil? and show_avatar%>
  
  <div class="container-img">
    <div class="dummy"></div>
    <div class="element">
      <div class="img-box">
        <img src="<%=category.getAvatarUrl%>"/>
      </div>
    </div>
  </div> 

<%else%>

<%thumbs_array = new_category_thumbnail(category)%>
<div class="container-img-categorie_0">
    <div class="dummy-categorie"></div>
    <div class="element-categorie">
      <div class="img-box-categorie category_thumb_0" <%if thumbs_array[0]%> bs-img="<%=thumbs_array[0]%>"<%end%>><% if thumbs_array[0]%><img src='<%=thumbs_array[0]%>'/><%end%></div>
    </div>
</div>

<div class="container-img-categorie_1">
    <div class="dummy-categorie"></div>
    <div class="element-categorie">
      <div class="img-box-categorie category_thumb_1" <%if thumbs_array[1]%> bs-img="<%=thumbs_array[1]%>"<%end%>><% if thumbs_array[1]%><img src='<%=thumbs_array[1]%>'/><%end%></div>
    </div>
</div>

<div class="container-img-categorie_2">
    <div class="dummy-categorie"></div>
    <div class="element-categorie">
      <div class="img-box-categorie category_thumb_2" <%if thumbs_array[2]%> bs-img="<%=thumbs_array[2]%>" <%end%> ><% if thumbs_array[2]%><img src='<%=thumbs_array[2]%>'/><%end%></div>
    </div>
</div>

<div class="container-img-categorie_3">
    <div class="dummy-categorie"></div>
    <div class="element-categorie">
      <div class="img-box-categorie category_thumb_3" <%if thumbs_array[3]%> bs-img="<%=thumbs_array[3]%>"<%end%> ><% if thumbs_array[3]%><img src='<%=thumbs_array[3]%>'/><%end%></div>
    </div>
</div>
<%end%>
