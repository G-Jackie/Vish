<section id="category">
  <div class="category_info">
    <div class="icon-box-fav">
      <i class="icon-star "></i>
    </div>  
    <%= render partial: 'help/help_favourite' %>
    <h2><%= t('categories.favorites.title') %></h2>    
    <h4><%= t('categories.favorites.description') %></h3>
  </div>

  <% @items = subject_content current_subject, [Excursion, Picture, Video, Document, Embed, Link], {:scope => :like, :limit=>0} %>
  <%= render partial: 'categories/items' %>
</section>

<%= content_for :javascript do %>
  $(document).ready(function() {
    $(".resource").fitText(0.4);
  });
<% end %>