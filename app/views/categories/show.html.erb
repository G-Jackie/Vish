
<section id="category">
  <div class="category_info">
    <div class="fa fa-box">
      <%=category_thumbnail(@category)%>
    </div>  
    <div class="information">
      <div class="briefing">
        <header>
          <!--titulo-->
          <h1><%= @category.title %></h1>
          <!--ayuda-->
          <%= render partial: 'help/help_categories' %>
        </header>
        <!--descripcion-->
        <div class="description"><%= @category.description %></div>
      
        <div class="btn-group">
          <!--editar-->
          <% if can?(:update, @category) %>
          <%= link_to(raw("<i class='fa fa-edit '></i>")+ t('excursion.actions.edit'), '#', :id => "edit_icon_link", :class =>"btn btn-default") %> 
          <% end %>
          <!--borrar-->
          <% if user_signed_in? and can?(:destroy, @category) %>
          <%= link_to(raw("<i class='fa fa-trash'></i>") + t('excursion.actions.delete') , @category, :method => :delete, :remote => false, :confirm => "Are you sure?", :class =>"action btn btn-default" )%>
          <% end %>
        </div>
      </div>
      <div class="update" style="display:none">
        <%= form_for(@category, :class => "form-group", :url => [@category]) do |f| %>
        <%= f.hidden_field :owner_id %>
        <!--TITULO-->
        <label><%= t('categories.leyend.title')%></label>
        <%= f.text_field :title %>
        <!--DESCRIPCION-->
        <label><%= t('categories.leyend.description')%></label>
        <%= f.text_field :description%>
        <div class="actions">
          <%= f.submit t('categories.save'), :id => "saveCategory", :class=>"btn btn-default" %>
          <%=link_to t('hide'), "#", :id=>"hide_category_form", :class=>"btn btn-primary"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="excursions">
  <ul class="">
    <%# excursions = subject_excursions(profile_or_current_subject, {:scope => scope, :limit => 0, :page=> page}) %>
    <% @category.property_objects.each do |item| %>
    <% resources = [Picture, Document, Embed, Link, Video] %>
    <% if resources.include?(item.object.class) %>
    <%= render :partial => 'repositories/resource', :locals => { :resource => item.object } %>
    <% else %>
    <%= render :partial => "#{item.object.class.to_s.tableize}/#{item.object.class.to_s.underscore}", :locals => { item.object.class.to_s.underscore.to_sym => item.object } %>
    <% end %>
    <% end %>
  </ul>
</div>


  <%= content_for :javascript do %>
  $(document).ready(function() {
  $(".resource").fitText(0.4);

  $(".edit_icon").on("click", function(){
  $(".update").show("slow");
  $(".btn-group").hide("slow");
  $(".information").hide("slow");
});

$("#hide_category_form").on("click", function(){
$(".update").hide("slow");
$(".btn-group").show("slow");
$(".information").show("slow");
});

});
<% end %>


