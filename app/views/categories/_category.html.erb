<li class="box-item excursion-item">

<!--IMG categories-->
  <div class="category">
    <%= link_to "<i class='icon-th-large'></i>".html_safe, category, :title => category.title %>
  </div>
<!--INFO categories-->
  <div class="info">
<!--Title -->
    <div class="name">
      <%= link_to truncate(category.title, :length => 15), category %>
    </div>
<!--Autor -->
    <div class="author"> 
      <!-- <a><%= raw t('document.by', author: link_to(category.author.name, category.author_subject)) %></a> -->
      <%= link_to category.author.name, category.author.subject %>
    </div>
<!--____________________ -->
    <div class="info-bottom">
      <hr class="soften">
<!--views -->
      <div class="number_elems">
        <%=category.property_objects.count.to_s%>
        <%=t('categories.item_inside')%>
      </div>
    </div>
  </div>
</li>










