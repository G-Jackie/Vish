<!-- corner -->

<div class="corner-item">
  <div class="corner-item2">
    <div class="corner-color"></div>
    <i class="icon-webapp-new"></i>
  </div>
  <div class="corner-background"></div>
</div>

<h3 class="title_WS resource_title_WS"><%=t('workshop.activities.resource.title')%> <span class="blue"> Webapp</span></h3>
<button href="#" id="showMore" status="showMore" class="ui-state-default ui-corner-all"><a><%=t('excursion.actions.show_more')%></a></button>

<%= div_for webapp, :class => 'object_WS' do %>
  <div class="webapp_show">
    <iframe width=<%=webapp.width%> height="<%=webapp.height%>" class="webapp_wrapper" style="border: none; max-width: 100%" src="<%=webapp.lourl%>"></iframe>
    <div class="link_address">
      <a href="<%=webapp_path(webapp, :format => :full)%>" target="_blank"><i class="icon-fullscreen"></i><%= t("webapp.view_full") %></a>
    </div>
  </div>
<% end %>

<div class="resource_ws_info">
  <%= render partial: "common_documents/info_workshop", locals: { document: webapp } %>
  <div class="actions">
    <button href="#" class="ui-state-default ui-corner-all"><a><%=t('excursion.actions.download')%></a></button>
    <button href="#" class="ui-state-default ui-corner-all"><a href="<%=webapp_path(webapp, :format => :full)%>" target="_blank"><i class="icon-fullscreen"></i><%= t("webapp.view_full") %></a></button>
  </div>
</div>
